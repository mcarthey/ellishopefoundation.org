@using EllisHope.Models
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error - Ellis Hope Foundation</title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/fonts/bootstrap-icons.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        .error-container {
            text-align: center;
            color: white;
            padding: 2rem;
            width: 100%;
            max-width: 800px;
        }

        .error-icon {
            font-size: 8rem;
            margin-bottom: 1rem;
            opacity: 0.9;
        }

        .error-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 1rem;
            padding: 3rem;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            color: #333;
        }

        .error-code {
            font-size: 6rem;
            font-weight: bold;
            color: #667eea;
            margin: 0;
            line-height: 1;
        }

        .error-title {
            font-size: 2rem;
            margin: 1rem 0;
            color: #333;
        }

        .error-message {
            font-size: 1.1rem;
            color: #666;
            margin-bottom: 2rem;
        }

        .btn-home {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            border-radius: 0.5rem;
            text-decoration: none;
            display: inline-block;
            transition: transform 0.2s, box-shadow 0.2s;
            margin: 0.5rem;
        }

        .btn-home:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            color: white;
        }

        .support-text {
            margin-top: 2rem;
            font-size: 0.9rem;
            color: #999;
        }

        .dev-details {
            background: #f8f9fa;
            border-left: 4px solid #dc3545;
            padding: 1rem;
            margin-top: 2rem;
            text-align: left;
            border-radius: 0.5rem;
        }

        .dev-details code {
            background: #fff;
            padding: 0.2rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-card">
            <div class="error-icon">
                <i class="bi bi-exclamation-triangle-fill text-warning"></i>
            </div>
            <h1 class="error-code">Oops!</h1>
            <h2 class="error-title">Something went wrong</h2>
            <p class="error-message">
                We're sorry, but something unexpected happened. Our team has been notified and we're working to fix it.
            </p>
            
            <div>
                <a href="/" class="btn-home">
                    <i class="bi bi-house-fill"></i> Go to Homepage
                </a>
                <a href="javascript:history.back()" class="btn-home">
                    <i class="bi bi-arrow-left"></i> Go Back
                </a>
            </div>

            @if (Model.ShowRequestId)
            {
                <div class="dev-details">
                    <h5 class="text-danger">
                        <i class="bi bi-bug"></i> Development Mode
                    </h5>
                    <p>
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </p>
                    <p class="mb-0">
                        <small class="text-muted">
                            This detailed information is only shown in development mode. 
                            In production, users will see a friendly error message without technical details.
                        </small>
                    </p>
                </div>
            }

            <p class="support-text">
                If you continue to experience issues, please contact us at 
                <a href="mailto:support@ellishope.org">support@ellishope.org</a>
            </p>
        </div>
    </div>
</body>
</html>