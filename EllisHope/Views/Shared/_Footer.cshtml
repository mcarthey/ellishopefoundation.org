@inject IConfiguration Configuration
@inject EllisHope.Services.ISiteSettingsService SiteSettings
@{
    var foundation = Configuration.GetSection("Foundation");
    var defaultDonateUrl = await SiteSettings.GetDefaultDonationUrlAsync() ?? "/contact";

    // Email obfuscation - split into parts for bot protection
    var foundationEmail = foundation["Email"] ?? "";
    var emailUser = "";
    var emailDomain = "";
    if (!string.IsNullOrEmpty(foundationEmail))
    {
        var emailParts = foundationEmail.Split('@');
        emailUser = emailParts.Length > 0 ? emailParts[0] : "";
        emailDomain = emailParts.Length > 1 ? emailParts[1] : "";
    }
}

<footer class="footer-two pt-30">
    <img class="shape-2" src="~/assets/img/shape/shape-12.png" alt="shape">
    <img class="shape-3" src="~/assets/img/shape/shape-80.png" alt="shape">
    <div class="container fot-border-2 pt-95">
        <div class="row mb-30">
            <div class="col-xl-3 col-lg-3 col-md-6">
                <div class="footer-widget ht-about-widget mb-30">
                    <div class="footer-logo">
                        <a href="/home/">
                            <img src="~/assets/img/logo/ellis-hope-logo.svg" alt="logo">
                        </a>
                    </div>
                    <ul>
                        <li>
                            <a href="#" class="obfuscated-email"
                               data-user="@emailUser"
                               data-domain="@emailDomain">@(emailUser)[at]@(emailDomain)</a>
                        </li>
                        <li>
                            <a href="tel:@foundation["Phone"]">@foundation["Phone"]</a>
                        </li>
                    </ul>
                    <div class="social-links">
                        <a href="@foundation["SocialMedia:Facebook"]" target="_blank" rel="noopener"><i class="bi bi-facebook"></i></a>
                        <a href="@foundation["SocialMedia:Twitter"]" target="_blank" rel="noopener"><i class="bi bi-twitter"></i></a>
                        <a href="@foundation["SocialMedia:Instagram"]" target="_blank" rel="noopener"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6">
                <div class="footer-widget ms-xxl-5 mb-30">
                    <h4 class="widget-title">Company</h4>
                    <ul>
                        <li><a href="/about">About us</a></li>
                        <li><a href="/contact">Contact</a></li>
                        <li><a href="/blog">Blog</a></li>
                        <li><a href="/team">Our Team</a></li>
                        <li><a href="/causes">Causes</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 d-flex justify-content-lg-center">
                <div class="footer-widget mb-30">
                    <h4 class="widget-title">Get Involved</h4>
                    <ul>
                        <li><a href="@defaultDonateUrl" target="_blank">Donate</a></li>
                        <li><a href="/events">Events</a></li>
                        <li><a href="/team">Volunteer</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-6 d-flex justify-content-lg-end">
                <div class="footer-widget mb-30">
                    <h4 class="widget-title">Resources</h4>
                    <ul>
                        <li><a href="/faq">FAQ</a></li>
                        <li><a href="/services">Services</a></li>
                        <li><a href="/blog">News</a></li>
                        <li><a href="/contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="copyright-wrap">
            <div class="row align-items-center">
                <div class="col-xl-6 col-lg-6">
                    <div class="copyright-text text-lg-start text-center mb-lg-0 mb-md-4">
                        © Copyright @DateTime.Now.Year
                        <a href="/home/">@foundation["Name"]</a>. All Rights Reserved.
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 text-xl-end text-center">
                    <ul class="footer-menu">
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="/contact">Contact Us</a></li>
                    </ul>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12 text-center">
                    <a href="https://learnedgeek.com" target="_blank" rel="noopener" class="developer-credit" style="color: #888; text-decoration: none; font-size: 12px; display: inline-flex; align-items: center; gap: 6px;">
                        <span>Developed by</span>
                        <img src="~/assets/img/logo/learned-geek-logo.png" alt="Learned Geek" style="height: 18px; opacity: 0.7;">
                        <span>Learned Geek</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</footer>
