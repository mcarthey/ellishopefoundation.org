@model EllisHope.Models.ViewModels.ErrorViewModel
@{
    ViewBag.Title = "Server Error";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Email obfuscation for support email
    var supportEmail = Model?.SupportEmail ?? "";
    var supportEmailUser = "";
    var supportEmailDomain = "";
    if (!string.IsNullOrEmpty(supportEmail))
    {
        var emailParts = supportEmail.Split('@');
        supportEmailUser = emailParts.Length > 0 ? emailParts[0] : "";
        supportEmailDomain = emailParts.Length > 1 ? emailParts[1] : "";
    }
}

<main>
    <!-- page-title-area start -->
    <div class="page-title-area">
        <div class="breadcrumb-wrapper" data-background="/assets/img/templates/shared/default-header-banner.jpg">
            <img class="shape-1" src="~/assets/img/shape/shape-81.png" alt="shape">
            <img class="shape-2" src="~/assets/img/shape/shape-82.png" alt="shape">
            <div class="container">
                <div class="breadcrumb-content text-center">
                    <h2 class="breadcrumb-title">Something Went Wrong</h2>
                    <ul class="breadcrumb-menu">
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li>
                            <a href="#">Error</a>
                        </li>
                        <li>
                            <a href="#">500</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- page-title-area end -->

    <!-- error-page-wrapper start -->
    <div class="ht-error-page-wrapper text-center pt-130 pt-lg-100 pb-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="error-icon mb-4">
                        <i class="bi bi-x-circle-fill text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <div class="title-one">
                        <h1 class="display-1 fw-bold text-danger">500</h1>
                        <h2 class="title mt-3 wow fadeInUp">Oops! Something Went Wrong</h2>
                        <p class="wow fadeInUp mt-3" data-wow-delay="0.1s">
                            We're sorry, but something unexpected happened on our end.
                            Our team has been notified and is working to resolve the issue.
                        </p>

                        @if (!string.IsNullOrEmpty(Model?.CorrelationId))
                        {
                            <div class="alert alert-info mt-4 text-start">
                                <h6 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Error Reference</h6>
                                <p class="mb-2">If you need to report this issue, please include this reference number:</p>
                                <code class="d-block p-2 bg-dark text-light rounded">@Model.CorrelationId</code>
                            </div>
                        }

                        <div class="mt-4">
                            <a href="/" class="ht-btn px-4 wow fadeInUp" data-wow-delay="0.2s">
                                <i class="bi bi-house-door me-2"></i> Back to Home
                            </a>
                            @if (!string.IsNullOrEmpty(supportEmailUser) && !string.IsNullOrEmpty(supportEmailDomain))
                            {
                                <a href="#" class="ht-btn btn-outline ms-3 px-4 wow fadeInUp obfuscated-email"
                                   data-user="@supportEmailUser"
                                   data-domain="@supportEmailDomain"
                                   data-subject="Error Report - @Model?.CorrelationId"
                                   data-body="I encountered an error on your website.%0A%0AReference ID: @Model?.CorrelationId%0A%0APlease describe what you were doing when the error occurred:%0A"
                                   data-wow-delay="0.3s">
                                    <i class="bi bi-envelope me-2"></i> Report This Error
                                </a>
                            }
                        </div>

                        <div class="mt-5">
                            <h5>What can you try?</h5>
                            <ul class="list-unstyled text-muted">
                                <li><i class="bi bi-arrow-clockwise me-2"></i> Refresh the page</li>
                                <li><i class="bi bi-arrow-left me-2"></i> Go back to the previous page</li>
                                <li><i class="bi bi-house me-2"></i> Return to the homepage</li>
                                <li><i class="bi bi-clock me-2"></i> Try again in a few minutes</li>
                            </ul>
                        </div>
                    </div>

                    @if (Model?.ShowDetails == true && Model?.Exception != null)
                    {
                        <div class="mt-5 text-start">
                            <div class="alert alert-danger">
                                <h6 class="alert-heading"><i class="bi bi-bug me-2"></i>Developer Information</h6>
                                <p class="small mb-0">(This information is only shown in development mode)</p>
                            </div>
                            <div class="card">
                                <div class="card-header bg-danger text-white">
                                    <strong>@Model.Exception.GetType().FullName</strong>
                                </div>
                                <div class="card-body">
                                    <p><strong>Message:</strong> @Model.Exception.Message</p>
                                    @if (!string.IsNullOrEmpty(Model.Exception.StackTrace))
                                    {
                                        <details>
                                            <summary class="mb-2 cursor-pointer"><strong>Stack Trace</strong></summary>
                                            <pre class="bg-light p-3 rounded small overflow-auto" style="max-height: 400px;">@Model.Exception.StackTrace</pre>
                                        </details>
                                    }
                                    @if (Model.Exception.InnerException != null)
                                    {
                                        <details class="mt-3">
                                            <summary class="mb-2 cursor-pointer"><strong>Inner Exception</strong></summary>
                                            <p><strong>Type:</strong> @Model.Exception.InnerException.GetType().FullName</p>
                                            <p><strong>Message:</strong> @Model.Exception.InnerException.Message</p>
                                            <pre class="bg-light p-3 rounded small overflow-auto" style="max-height: 200px;">@Model.Exception.InnerException.StackTrace</pre>
                                        </details>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- error-page-wrapper end -->
</main>
