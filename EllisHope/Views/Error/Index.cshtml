@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>

    <!-- page-title-area start -->
    <div class="page-title-area">
        <div class="breadcrumb-wrapper" data-background="/assets/img/templates/shared/default-header-banner.jpg">
            <img class="shape-1" src="~/assets/img/shape/shape-81.png" alt="shape">
            <img class="shape-2" src="~/assets/img/shape/shape-82.png" alt="shape">
            <div class="container">
                <div class="breadcrumb-content text-center">
                    <h2 class="breadcrumb-title">Error-404</h2>
                    <ul class="breadcrumb-menu">
                        <li>
                            <a href="/home/">Home</a>
                        </li>
                        <li>
                            <a href="#">Pages</a>
                        </li>
                        <li>
                            <a href="#">404</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- page-title-area end -->
    <!-- ht-error-page-wrapper start -->
    <div class="ht-error-page-wrapper text-center pt-130 pt-lg-100 pb-100">
        <div class="container">
            <div class="title-one">
                <h2 class="title mt-5 wow fadeInUp">Sorry, Page Not Found</h2>
                <p class="wow fadeInUp" data-wow-delay="0.1s">
                    The page you are looking for does not exit.Please
                    try it.
                </p>
                <a href="/home/" class="ht-btn mt-4 px-xxl-5 px-3 wow fadeInUp" data-wow-delay="0.1s">
                    Back
                    Home
                </a>
            </div>
        </div>
    </div>
    <!-- ht-error-page-wrapper end -->
    <!-- newsletter-section start -->
    <div class="newsletter-section position-relative z-1 pt-160 pt-lg-60">
        <img class="shape-1 position-absolute ml-100 mt--90 d-none d-lg-inline-block"
             src="~/assets/img/shape/shape-8.png" alt="shape">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="title-one text-lg-start text-center">
                        <h2 class="title">Subscribe to Regular Newsletters.</h2>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="subscribe-form sub-form-2 text-lg-end">
                        <input type="text" placeholder="Enter Your Mail">
                        <button type="submit">Subscribe</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- newsletter-section end -->

</main>
