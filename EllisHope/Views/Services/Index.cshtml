@{
    ViewBag.Title = "Our Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>

<!-- page-title-area start -->
<div class="page-title-area">
    <div class="breadcrumb-wrapper" data-background="@Content.Image("Services", "HeaderBanner")">
        <img class="shape-1" src="~/assets/img/shape/shape-81.png" alt="shape">
        <img class="shape-2" src="~/assets/img/shape/shape-82.png" alt="shape">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <h2 class="breadcrumb-title">Our Services</h2>
                <ul class="breadcrumb-menu">
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li>
                        <a href="#">Services</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- page-title-area end -->

<!-- we-do-section start -->
<section class="we-do-section-five position-relative z-1 pt-140 pt-lg-100 pb-95 pb-lg-15"
         data-bg-color="#FDF3F0">
    <img class="shape-1" src="~/assets/img/shape/shape-39.png" alt="shape">
    <img class="shape-2" src="~/assets/img/shape/shape-40.png" alt="shape">
    <div class="container">
        <div class="row gx-lg-0 justify-content-center">
            <div class="col-xl-9 col-lg-8">
                <div class="title-one text-center mb-70">
                    <h5 class="sub-title wow fadeInUp">What we do</h5>
                    <h2 class="title wow fadeInUp" data-wow-delay="0.1">
                        @Content.Text("Services", "SectionTitle")
                    </h2>
                    <p class="wow fadeInUp" data-wow-delay="0.2">
                        @Content.Text("Services", "SectionSubtitle")
                    </p>
                </div>
            </div>
        </div>
        <div class="row align-items-center gx-xxl-4">
            <div class="col-lg-4">
                <div class="feature-wrap-8 wow fadeInUp" data-wow-delay="0.1">
                    <div class="icon">
                        <img class="front-icon" src="~/assets/img/icon/icon-28.svg" alt="icon">
                        <img class="back-icon" src="~/assets/img/icon/icon-28w.svg" alt="icon">
                    </div>
                    <h4 class="feature-title">@Content.Text("Services", "Service1Title")</h4>
                    <p class="description">@Content.Text("Services", "Service1Description")</p>
                    <a class="more-btn" href="/contact">Learn More <i class="bi bi-plus"></i></a>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-wrap-8 wow fadeInUp" data-wow-delay="0.2">
                    <div class="icon">
                        <img class="front-icon" src="~/assets/img/icon/icon-29.svg" alt="icon">
                        <img class="back-icon" src="~/assets/img/icon/icon-29w.svg" alt="icon">
                    </div>
                    <h4 class="feature-title">@Content.Text("Services", "Service2Title")</h4>
                    <p class="description">@Content.Text("Services", "Service2Description")</p>
                    <a class="more-btn" href="/contact">Learn More <i class="bi bi-plus"></i></a>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-wrap-8 wow fadeInUp" data-wow-delay="0.3">
                    <div class="icon">
                        <img class="front-icon" src="~/assets/img/icon/icon-30.svg" alt="icon">
                        <img class="back-icon" src="~/assets/img/icon/icon-30w.svg" alt="icon">
                    </div>
                    <h4 class="feature-title">@Content.Text("Services", "Service3Title")</h4>
                    <p class="description">@Content.Text("Services", "Service3Description")</p>
                    <a class="more-btn" href="/contact">Learn More <i class="bi bi-plus"></i></a>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-wrap-8 wow fadeInUp" data-wow-delay="0.4">
                    <div class="icon">
                        <img class="front-icon" src="~/assets/img/icon/icon-31.svg" alt="icon">
                        <img class="back-icon" src="~/assets/img/icon/icon-31w.svg" alt="icon">
                    </div>
                    <h4 class="feature-title">@Content.Text("Services", "Service4Title")</h4>
                    <p class="description">@Content.Text("Services", "Service4Description")</p>
                    <a class="more-btn" href="/contact">Learn More <i class="bi bi-plus"></i></a>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-wrap-8 wow fadeInUp" data-wow-delay="0.5">
                    <div class="icon">
                        <img class="front-icon" src="~/assets/img/icon/icon-32.svg" alt="icon">
                        <img class="back-icon" src="~/assets/img/icon/icon-32w.svg" alt="icon">
                    </div>
                    <h4 class="feature-title">@Content.Text("Services", "Service5Title")</h4>
                    <p class="description">@Content.Text("Services", "Service5Description")</p>
                    <a class="more-btn" href="/contact">Learn More <i class="bi bi-plus"></i></a>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-wrap-8 wow fadeInUp" data-wow-delay="0.6">
                    <div class="icon">
                        <img class="front-icon" src="~/assets/img/icon/icon-33.svg" alt="icon">
                        <img class="back-icon" src="~/assets/img/icon/icon-33w.svg" alt="icon">
                    </div>
                    <h4 class="feature-title">@Content.Text("Services", "Service6Title")</h4>
                    <p class="description">@Content.Text("Services", "Service6Description")</p>
                    <a class="more-btn" href="/contact">Learn More <i class="bi bi-plus"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- we-do-section end -->

<!-- feedback-section start -->
<div class="feedback-section-four arrow-style-10 position-relative z-1 pt-180 pt-lg-60 pb-90 pb-lg-60">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8">
                <div class="title-one text-center mb-70">
                    <h5 class="sub-title wow fadeInUp">Testimonial</h5>
                    <h2 class="title wow fadeInUp" data-wow-delay="0.1">
                        @Content.Text("Services", "TestimonialTitle")
                    </h2>
                    <p class="wow fadeInUp" data-wow-delay="0.2">
                        @Content.Text("Services", "TestimonialSubtitle")
                    </p>
                </div>
            </div>
        </div>
        <div id="arrow-6" class="row gx-xl-5 ht-carousel" data-slide-show="2" data-lg-slide-show="2"
             data-md-slide-show="1" data-sm-slide-show="1">
            <div class="col-lg-6">
                <div class="feedback-wrap-6 border-wrap">
                    <img class="author" src="~/assets/img/media/headshot3-90x90.jpg" alt="author">
                    <p class="feedback-text">
                        I'm always eager to participate in charity events they've
                        offered me invaluable experiences taking places
                    </p>
                    <div class="rating">
                        <a href="#"><i class="bi bi-star-fill"></i></a>
                        <a href="#"><i class="bi bi-star-fill"></i></a>
                        <a href="#"><i class="bi bi-star-fill"></i></a>
                        <a href="#"><i class="bi bi-star-fill"></i></a>
                        <a href="#"><i class="bi bi-star"></i></a>
                    </div>
                    <div class="author-info">
                        <h5 class="name">Sarah Johnson, <span class="designation">Community Member</span></h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="feedback-wrap-6 border-wrap">
                    <img class="author" src="~/assets/img/media/headshot2-90x90.jpg" alt="author">
                    <p class="feedback-text">
                        The support I received from this organization changed my life.
                        They truly care about making a difference.
                    </p>
                    <div class="rating">
                        <a href="#"><i class="bi bi-star-fill"></i></a>
                        <a href="#"><i class="bi bi-star-fill"></i></a>
                        <a href="#"><i class="bi bi-star-fill"></i></a>
                        <a href="#"><i class="bi bi-star-fill"></i></a>
                        <a href="#"><i class="bi bi-star-fill"></i></a>
                    </div>
                    <div class="author-info">
                        <h5 class="name">Michael Chen, <span class="designation">Program Participant</span></h5>
                    </div>
                </div>
            </div>
        </div>
        <button data-slick-prev="#arrow-6" class="slick-prev">
            <i class="bi bi-chevron-left"></i>
        </button>
        <button data-slick-next="#arrow-6" class="slick-next">
            <i class="bi bi-chevron-right"></i>
        </button>
    </div>
</div>
<!-- feedback-section end -->

<!-- newsletter-section start -->
<div class="newsletter-section position-relative z-1">
    <img class="shape-1 position-absolute ml-100 top-0 d-none d-lg-inline-block"
         src="~/assets/img/shape/shape-8.png" alt="shape">
    <div class="container">
        <div class="row align-items-center newsletter-border pt-50">
            <div class="col-lg-6">
                <div class="title-one text-lg-start text-center">
                    <h2 class="title">@Content.Text("Services", "NewsletterTitle")</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="subscribe-form sub-form-2 text-lg-end">
                    <input type="text" placeholder="Enter Your Email">
                    <button type="submit">Subscribe</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- newsletter-section end -->

</main>
