@model EllisHope.Models.ViewModels.AboutPageViewModel
@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>

<!-- page-title-area start -->
<div class="page-title-area">
    <div class="breadcrumb-wrapper" data-background="@Content.Image("About", "HeaderBanner")">
        <img class="shape-1" src="~/assets/img/shape/shape-81.png" alt="shape">
        <img class="shape-2" src="~/assets/img/shape/shape-82.png" alt="shape">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <h2 class="breadcrumb-title">About Us</h2>
                <ul class="breadcrumb-menu">
                    <li>
                        <a href="/home/">Home</a>
                    </li>
                    <li>
                        <a href="#">Pages</a>
                    </li>
                    <li>
                        <a href="#">About US</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- page-title-area end -->
<!-- about-section start -->
<section class="about-section-two pt-230 pb-45 pt-lg-100 pb-lg-15">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-lg-6">
                <div class="text-wrapper-one mb-45 wow fadeInLeft">
                    <div class="title-two mb-50">
                        <h5 class="sub-title">about us</h5>
                        <h2 class="title">@Content.Text("About", "AboutTitle")</h2>
                        <p>@Content.Text("About", "AboutSubtitle")</p>
                    </div>
                    <div class="feature-list-three mb-15">
                        <span class="icon">
                            <i class="bi bi-check"></i>
                        </span>
                        <span class="feature-title">@Content.Text("About", "AboutFeature1")</span>
                    </div>
                    <div class="feature-list-three mb-15">
                        <span class="icon">
                            <i class="bi bi-check"></i>
                        </span>
                        <span class="feature-title">@Content.Text("About", "AboutFeature2")</span>
                    </div>
                    <div class="feature-list-three">
                        <span class="icon">
                            <i class="bi bi-check"></i>
                        </span>
                        <span class="feature-title">@Content.Text("About", "AboutFeature3")</span>
                    </div>
                    <a class="ht-btn style-2 mt-30" href="/about">More Details</a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6">
                <div class="img-wrapper-two text-lg-end position-relative mb-45 wow fadeInRight">
                    <img class="main-img-2 img-fluid" src="~/assets/img/shape/shape-6.png" alt="shape">
                    <img class="main-img img-fluid" src="@Content.Image("About", "AboutSectionImage")" alt="About">
                    <div class="float-content">
                        <p class="fs-20 text-heding mb-2">Volunteer <span class="counter">@Content.Text("About", "VolunteerCount")</span></p>
                        <ul class="user-list">
                            <li>
                                <img src="~/assets/img/media/media-10.jpg" alt="author">
                            </li>
                            <li>
                                <img src="~/assets/img/media/media-11.jpg" alt="author">
                            </li>
                            <li>
                                <img src="~/assets/img/media/media-12.jpg" alt="author">
                            </li>
                            <li>
                                <img src="~/assets/img/media/media-13.jpg" alt="author">
                            </li>
                            <li class="number">
                                <i class="bi bi-arrow-right"></i>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- about-section end -->
<!-- fact-section start -->
<div class="fact-section pt-90 pt-lg-60 pb-45 pb-lg-15">
    <div class="container">
        <div class="row align-items-center justify-content-center row-cols-xl-3 row-cols-lg-2 row-cols-md-2 row-cols-1">
            <div class="col d-flex justify-content-xl-start justify-content-center">
                <div class="progressbar-content-2 wow fadeInUp">
                    <div class="chart2" data-percent="90">
                        <span>@Content.Text("About", "Stat1Value")</span>
                    </div>
                    <h3 class="progress-title">@Content.Text("About", "Stat1Label")</h3>
                </div>
            </div>
            <div class="col d-flex justify-content-center">
                <div class="progressbar-content-2 wow fadeInUp" data-wow-delay="0.1">
                    <div class="chart2" data-percent="70">
                        <span>@Content.Text("About", "Stat2Value")</span>
                    </div>
                    <h3 class="progress-title">@Content.Text("About", "Stat2Label")</h3>
                </div>
            </div>
            <div class="col d-flex justify-content-xl-end justify-content-center">
                <div class="progressbar-content-2 wow fadeInUp" data-wow-delay="0.2">
                    <div class="chart2" data-percent="82">
                        <span>@Content.Text("About", "Stat3Value")</span>
                    </div>
                    <h3 class="progress-title">@Content.Text("About", "Stat3Label")</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- fact-section end -->
<!-- we-do-section start -->
<section class="we-do-section-five position-relative z-1 pt-90 pt-lg-60 pb-135 pb-lg-15">
    <img class="shape-1" src="~/assets/img/shape/shape-39.png" alt="shape">
    <div class="container">
        <div class="row gx-lg-0 justify-content-center">
            <div class="col-xl-9 col-lg-8">
                <div class="title-one text-center mb-70">
                    <h5 class="sub-title wow fadeInUp">What we do</h5>
                    <h2 class="title wow fadeInUp" data-wow-delay="0.1">@Content.Text("About", "WhatWeDoTitle")</h2>
                    <p class="wow fadeInUp" data-wow-delay="0.2">@Content.Text("About", "WhatWeDoSubtitle")</p>
                </div>
            </div>
        </div>
        <div class="row align-items-center gx-xxl-4">
            <div class="col-lg-4">
                <div class="feature-wrap-8 wow fadeInUp">
                    <div class="icon">
                        <img class="front-icon" src="~/assets/img/icon/icon-28.svg" alt="icon">
                        <img class="back-icon" src="~/assets/img/icon/icon-28w.svg" alt="icon">
                    </div>
                    <h4 class="feature-title">Liquid life unveiled</h4>
                    <p class="description">
                        Disclosing the secrets of existence through the revelation of
                        life's liquid.
                    </p>
                    <a class="more-btn" href="#">Read More <i class="bi bi-plus"></i></a>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-wrap-8 wow fadeInUp" data-wow-delay="0.1">
                    <div class="icon">
                        <img class="front-icon" src="~/assets/img/icon/icon-29.svg" alt="icon">
                        <img class="back-icon" src="~/assets/img/icon/icon-29w.svg" alt="icon">
                    </div>
                    <h4 class="feature-title">Health tech revolution</h4>
                    <p class="description">
                        Medical landscape transformed by the revolutionary wave of
                        health tech.
                    </p>
                    <a class="more-btn" href="#">Read More <i class="bi bi-plus"></i></a>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="feature-wrap-8 wow fadeInUp" data-wow-delay="0.2">
                    <div class="icon">
                        <img class="front-icon" src="~/assets/img/icon/icon-30.svg" alt="icon">
                        <img class="back-icon" src="~/assets/img/icon/icon-30w.svg" alt="icon">
                    </div>
                    <h4 class="feature-title">Educate to elevate</h4>
                    <p class="description">
                        Technological advances trigger a shift, revolutionizing the
                        landscape of
                        health solutions
                    </p>
                    <a class="more-btn" href="#">Read More <i class="bi bi-plus"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- we-do-section end -->
<!-- team-section start -->
<section class="team-section-two dot-style-4 position-relative z-1 pt-110 pt-lg-60 pb-125 pb-lg-15">
    <img class="shape-1" src="~/assets/img/shape/shape-37.png" alt="shape">
    <div class="container">
        <div class="title-one text-center mb-50">
            <h5 class="sub-title wow fadeInUp">Our Team</h5>
            <h2 class="title text-white wow fadeInUp" data-wow-delay="0.1">@Content.Text("About", "TeamSectionTitle")</h2>
            <p class="opacity-75 text-white wow fadeInUp" data-wow-delay="0.2">@Content.Text("About", "TeamSectionSubtitle")</p>
        </div>
        @if (Model.BoardMembers.Any())
        {
            <div class="row ht-carousel" data-slide-show="3" data-ml-slide-show="2" data-lg-slide-show="3"
                 data-md-slide-show="2" data-dots="true">
                @foreach (var member in Model.BoardMembers)
                {
                    var profileImage = !string.IsNullOrEmpty(member.ProfilePictureUrl)
                        ? member.ProfilePictureUrl
                        : "/assets/img/avatars/avatar-01.png";

                    <div class="col-lg-4">
                        <div class="team-wrap-4">
                            <div class="team-thumb">
                                <img class="w-100" src="@profileImage" alt="@member.FullName" style="object-fit: cover; height: 350px;">
                            </div>

                            <div class="content">
                                <h4 class="name">
                                    <a href="/team/details/@member.Id">@member.FullName</a>
                                </h4>
                                <p class="designation">Board Member</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center">
                <p class="text-white opacity-75">Board member information coming soon.</p>
            </div>
        }
    </div>
</section>
<!-- team-section end -->
<!-- sponsor-testimonials-section start -->
<div class="feedback-section-four arrow-style-10 position-relative z-1 pt-180 pt-lg-60 pb-90 pb-lg-60"
     data-bg-color="#FFF5F2">
    <div class="container">
        <div class="row align-items-lg-end">
            <div class="col-lg-6">
                <div class="title-one mb-70 mb-md-30 wow fadeInLeft">
                    <h5 class="sub-title">Our Sponsors</h5>
                    <h2 class="title">@Content.Text("About", "TestimonialTitle")</h2>
                </div>
            </div>
            <div class="col-lg-6 d-lg-flex justify-content-lg-end mb-70">
                <div class="title-one ps-xxl-5 ms-xxl-5 wow fadeInRight">
                    <p>@Content.Text("About", "TestimonialSubtitle")</p>
                </div>
            </div>
        </div>
        @if (Model.SponsorsWithQuotes.Any())
        {
            <div id="arrow-6" class="row gx-xl-5 ht-carousel" data-slide-show="2" data-lg-slide-show="2"
                 data-md-slide-show="1" data-sm-slide-show="1">
                @foreach (var sponsor in Model.SponsorsWithQuotes)
                {
                    var logoImage = !string.IsNullOrEmpty(sponsor.CompanyLogoUrl)
                        ? sponsor.CompanyLogoUrl
                        : null;
                    var displayName = !string.IsNullOrEmpty(sponsor.CompanyName)
                        ? sponsor.CompanyName
                        : sponsor.FullName;

                    <div class="col-lg-6">
                        <div class="feedback-wrap-6">
                            @if (logoImage != null)
                            {
                                <img class="author" src="@logoImage" alt="@displayName"
                                     style="object-fit: contain; max-width: 200px; max-height: 100px; width: auto; height: auto;">
                            }
                            else
                            {
                                @* Placeholder with initials *@
                                <div class="author d-flex align-items-center justify-content-center bg-primary text-white"
                                     style="font-size: 1.5rem; font-weight: bold; width: 80px; height: 80px;">
                                    @(displayName.Length > 0 ? displayName.Substring(0, 1).ToUpper() : "S")
                                </div>
                            }
                            <p class="feedback-text">
                                "@sponsor.SponsorQuote"
                            </p>
                            @if (sponsor.SponsorRating.HasValue)
                            {
                                <div class="rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= sponsor.SponsorRating.Value)
                                        {
                                            <span><i class="bi bi-star-fill"></i></span>
                                        }
                                        else
                                        {
                                            <span><i class="bi bi-star"></i></span>
                                        }
                                    }
                                </div>
                            }
                            <div class="author-info">
                                <h5 class="name">@displayName</h5>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <button data-slick-prev="#arrow-6" class="slick-prev">
                <i class="bi bi-chevron-left"></i>
            </button>
            <button data-slick-next="#arrow-6" class="slick-next">
                <i class="bi bi-chevron-right"></i>
            </button>
        }
        else
        {
            <div class="text-center py-4">
                <p class="text-muted mb-0">Sponsor testimonials coming soon!</p>
            </div>
        }
    </div>
</div>
<!-- sponsor-testimonials-section end -->
<!-- sponsor-logos-section start -->
<div class="brand-wrap-2 pt-30 pb-60" data-bg-color="#FFF5F2">
    <div class="container">
        @if (Model.AllSponsors.Any())
        {
            <div class="row justify-content-center g-4">
                @foreach (var sponsor in Model.AllSponsors)
                {
                    var displayName = !string.IsNullOrEmpty(sponsor.CompanyName)
                        ? sponsor.CompanyName
                        : sponsor.FullName;
                    var initials = displayName.Length > 0
                        ? string.Join("", displayName.Split(' ', StringSplitOptions.RemoveEmptyEntries)
                            .Take(2).Select(w => w[0].ToString().ToUpper()))
                        : "S";

                    <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                        <div class="sponsor-logo-card d-flex align-items-center justify-content-center"
                             style="background: white; border-radius: 12px; padding: 20px; height: 120px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); transition: transform 0.2s, box-shadow 0.2s;"
                             title="@displayName">
                            @if (!string.IsNullOrEmpty(sponsor.CompanyLogoUrl))
                            {
                                <img src="@sponsor.CompanyLogoUrl" alt="@displayName"
                                     style="max-width: 100%; max-height: 80px; object-fit: contain;">
                            }
                            else
                            {
                                @* Placeholder with initials *@
                                <div class="d-flex align-items-center justify-content-center"
                                     style="width: 80px; height: 80px; background: linear-gradient(135deg, #e74c3c, #c0392b); border-radius: 50%; color: white; font-weight: bold; font-size: 1.5rem;">
                                    @initials
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Become a Sponsor CTA -->
        <div class="text-center mt-50">
            <p class="mb-3 text-muted">Interested in supporting our mission?</p>
            <a href="/contact" class="ht-btn style-2">
                <i class="bi bi-heart"></i> Become a Sponsor
            </a>
        </div>
    </div>
</div>
<!-- sponsor-logos-section end -->
<!-- newsletter-section start -->
<div class="newsletter-section position-relative z-1 pt-160 pt-lg-60">
    <img class="shape-1 position-absolute ml-100 mt--90 d-none d-lg-inline-block"
         src="~/assets/img/shape/shape-8.png" alt="shape">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="title-one text-lg-start text-center">
                    <h2 class="title">@Content.Text("About", "NewsletterTitle")</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="subscribe-form sub-form-2 text-lg-end">
                    <input type="text" placeholder="Enter Your Mail">
                    <button type="submit">Subscribe</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- newsletter-section end -->

</main>
