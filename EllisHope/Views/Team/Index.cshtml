@model IEnumerable<EllisHope.Models.Domain.ApplicationUser>
@{
    ViewBag.Title = "Board Members";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>

<!-- page-title-area start -->
<div class="page-title-area">
    <div class="breadcrumb-wrapper" data-background="/assets/img/templates/team/header-banner.jpg">
        <img class="shape-1" src="~/assets/img/shape/shape-81.png" alt="shape">
        <img class="shape-2" src="~/assets/img/shape/shape-82.png" alt="shape">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <h2 class="breadcrumb-title">Our Board Members</h2>
                <ul class="breadcrumb-menu">
                    <li>
                        <a href="/home/">Home</a>
                    </li>
                    <li>
                        <a href="#">Team</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- page-title-area end -->
<!-- team-section start -->
<section class="team-section pt-180 pt-lg-100 pb-125 pb-lg-15">
    <div class="container">
        <div class="title-three text-center mb-70">
            <h5 class="sub-title before-none wow fadeInUp">Leadership</h5>
            <h2 class="title wow fadeInUp" data-wow-delay="0.1">
                <span class="position-relative">
                    Meet<img class="title-img" src="~/assets/img/shape/shape-11.png" alt="shape">
                </span> our
                Board Members
            </h2>
            <p class="wow fadeInUp" data-wow-delay="0.2">
                Our board members bring diverse talents and dedicated leadership to guide
                the Ellis Hope Foundation's mission.
            </p>
        </div>
        <div class="row align-items-center">
            @if (!Model.Any())
            {
                <div class="col-12 text-center">
                    <p class="text-muted">No board members currently listed.</p>
                </div>
            }
            else
            {
                var delay = 0.1;
                foreach (var member in Model)
                {
                    var profileImage = !string.IsNullOrEmpty(member.ProfilePictureUrl)
                        ? member.ProfilePictureUrl
                        : "/assets/img/team/default-profile.jpg";

                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="team-wrap-1 tw-stle-2 wow fadeInUp" data-wow-delay="@delay">
                            <div class="team-thumb">
                                <img class="w-100" src="@profileImage" alt="@member.FullName" style="object-fit: cover; height: 350px;">
                            </div>

                            <div class="content">
                                <h4 class="name">
                                    <a href="/team/details/@member.Id">@member.FullName</a>
                                </h4>
                                <p class="designation">Board Member</p>
                            </div>
                        </div>
                    </div>
                    delay += 0.1;
                }
            }
        </div>
    </div>
</section>
<!-- team-section end -->

</main>
