@model EllisHope.Areas.Admin.Models.MyApplicationsViewModel

@{
    ViewData["Title"] = "My Applications";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-file-earmark-text"></i> My Applications</h2>
                @if (Model.CanCreateNew)
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> New Application
                    </a>
                }
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!Model.Applications.Any())
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                        <h4 class="mt-3">No Applications Yet</h4>
                        <p class="text-muted">You haven't submitted any applications. Ready to get started?</p>
                        <a asp-action="Create" class="btn btn-primary btn-lg mt-3">
                            <i class="bi bi-plus-circle"></i> Create Your First Application
                        </a>
                    </div>
                </div>
            }
            else
            {
                @foreach (var app in Model.Applications.OrderByDescending(a => a.CreatedDate))
                {
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">
                                    Application #@app.Id
                                    <span class="badge @GetStatusBadgeClass(app.Status) ms-2">
                                        @app.StatusDisplay
                                    </span>
                                </h5>
                                <small class="text-muted">
                                    @if (app.SubmittedDate.HasValue)
                                    {
                                        <text>Submitted: @app.SubmittedDate.Value.ToString("MMMM dd, yyyy")</text>
                                    }
                                    else
                                    {
                                        <text>Created: @app.CreatedDate.ToString("MMMM dd, yyyy")</text>
                                    }
                                </small>
                            </div>
                            <div>
                                @if (app.Status == EllisHope.Models.Domain.ApplicationStatus.Approved)
                                {
                                    <i class="bi bi-check-circle-fill text-success fs-3"></i>
                                }
                                else if (app.Status == EllisHope.Models.Domain.ApplicationStatus.Rejected)
                                {
                                    <i class="bi bi-x-circle-fill text-danger fs-3"></i>
                                }
                                else if (app.Status == EllisHope.Models.Domain.ApplicationStatus.UnderReview)
                                {
                                    <i class="bi bi-hourglass-split text-primary fs-3"></i>
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <p class="mb-2">
                                        <strong>Funding Types:</strong> @app.FundingTypes
                                    </p>
                                    @if (app.EstimatedMonthlyCost.HasValue)
                                    {
                                        <p class="mb-2">
                                            <strong>Estimated Monthly Cost:</strong> $@app.EstimatedMonthlyCost.Value.ToString("N2")
                                        </p>
                                    }
                                    
                                    @if (!string.IsNullOrEmpty(app.DecisionMessage))
                                    {
                                        <div class="alert @(app.FinalDecision == EllisHope.Models.Domain.DecisionOutcome.Approved ? "alert-success" : "alert-info") mt-3">
                                            <strong>Message from Ellis Hope Foundation:</strong>
                                            <p class="mb-0 mt-2">@app.DecisionMessage</p>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4 text-md-end">
                                    <div class="btn-group-vertical d-grid gap-2">
                                        <a asp-action="Details" asp-route-id="@app.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i> View Details
                                        </a>
                                        
                                        @if (app.CanEdit)
                                        {
                                            <a asp-action="Edit" asp-route-id="@app.Id" class="btn btn-outline-secondary btn-sm">
                                                <i class="bi bi-pencil"></i> Edit Draft
                                            </a>
                                        }
                                        
                                        @if (app.CanWithdraw)
                                        {
                                            <button type="button" class="btn btn-outline-danger btn-sm" 
                                                    onclick="confirmWithdraw(@app.Id)">
                                                <i class="bi bi-x-circle"></i> Withdraw
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- Withdraw Confirmation Modal -->
<div class="modal fade" id="withdrawModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Withdraw Application</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="withdrawForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p>Are you sure you want to withdraw this application?</p>
                    <div class="mb-3">
                        <label for="withdrawReason" class="form-label">Reason (optional)</label>
                        <textarea id="withdrawReason" name="reason" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Withdraw Application</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmWithdraw(applicationId) {
            const form = document.getElementById('withdrawForm');
            form.action = '@Url.Action("Withdraw")/' + applicationId;
            new bootstrap.Modal(document.getElementById('withdrawModal')).show();
        }
    </script>
}

@functions {
    string GetStatusBadgeClass(EllisHope.Models.Domain.ApplicationStatus status)
    {
        return status switch
        {
            EllisHope.Models.Domain.ApplicationStatus.Draft => "bg-secondary",
            EllisHope.Models.Domain.ApplicationStatus.Submitted => "bg-info",
            EllisHope.Models.Domain.ApplicationStatus.UnderReview => "bg-primary",
            EllisHope.Models.Domain.ApplicationStatus.InDiscussion => "bg-warning",
            EllisHope.Models.Domain.ApplicationStatus.NeedsInformation => "bg-warning",
            EllisHope.Models.Domain.ApplicationStatus.Approved => "bg-success",
            EllisHope.Models.Domain.ApplicationStatus.Rejected => "bg-danger",
            EllisHope.Models.Domain.ApplicationStatus.Active => "bg-success",
            EllisHope.Models.Domain.ApplicationStatus.Completed => "bg-dark",
            _ => "bg-secondary"
        };
    }
}
