@model IEnumerable<EllisHope.Models.Domain.Cause>
@{
    ViewBag.Title = "Causes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>

<!-- page-title-area start -->
<div class="page-title-area">
    <div class="breadcrumb-wrapper" data-background="/assets/img/templates/causes/header-banner.jpg">
        <img class="shape-1" src="~/assets/img/shape/shape-81.png" alt="shape">
        <img class="shape-2" src="~/assets/img/shape/shape-82.png" alt="shape">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <h2 class="breadcrumb-title">Causes</h2>
                <ul class="breadcrumb-menu">
                    <li>
                        <a href="/home/">Home</a>
                    </li>
                    <li>
                        <a href="#">Pages</a>
                    </li>
                    <li>
                        <a href="/causes">Causes</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- page-title-area end -->

<!-- cause-section start -->
<section class="cause-section pt-180 pb-170 pt-lg-100 pb-lg-60">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-10">
                <div class="title-one text-center mb-70">
                    <h5 class="sub-title wow fadeInUp">causes</h5>
                    <h2 class="title px-xxl-5 mx-xxl-5 wow fadeInUp" data-wow-delay="0.1s">
                        Small donations
                        make
                        <span class="position-relative">
                            big
                            <img class="title-img"
                                 src="~/assets/img/shape/shape-3.png" alt="shape">
                        </span>
                        impacts.
                    </h2>
                </div>
            </div>
        </div>

        <!-- Search Form -->
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <form method="get" action="/causes" class="search-form">
                    <div class="input-group">
                        <input type="text" name="search" value="@ViewBag.SearchTerm" class="form-control form-control-lg" placeholder="Search causes...">
                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container">
        @if (Model != null && Model.Any())
        {
            var delay = 0.1;
            foreach (var cause in Model)
            {
                <div class="row align-items-center justify-content-center wow fadeInUp" data-wow-delay="@(delay)s">
                    <div class="causes-wrap-7 d-lg-flex col-xxl-10">
                        <div class="cause-thumb">
                            @if (!string.IsNullOrEmpty(cause.FeaturedImageUrl))
                            {
                                <img src="@cause.FeaturedImageUrl" alt="@cause.Title">
                            }
                            else
                            {
                                <img src="~/assets/img/cause/img-19.jpg" alt="@cause.Title">
                            }
                            @if (!string.IsNullOrEmpty(cause.Category))
                            {
                                <div class="cause-tag">@cause.Category.ToLower()</div>
                            }
                        </div>
                        <div class="cause-content">
                            <h3 class="cause-title">
                                <a href="/causes/details/@cause.Slug">
                                    @cause.Title
                                </a>
                            </h3>
                            <p class="description">
                                @(cause.ShortDescription ?? (cause.Description?.Length > 150 ? cause.Description.Substring(0, 150) + "..." : cause.Description))
                            </p>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" aria-valuenow="@cause.ProgressPercentage" aria-valuemin="0"
                                     aria-valuemax="100" style="width: @(Math.Min(cause.ProgressPercentage, 100))%">
                                    <span class="progress-value">@cause.ProgressPercentage%</span>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="donation-btn-wrapper">
                                    @if (!string.IsNullOrEmpty(cause.DonationUrl))
                                    {
                                        <a href="@cause.DonationUrl" target="_blank" class="donation-btn">Donate Now</a>
                                    }
                                    else
                                    {
                                        <a href="/causes/details/@cause.Slug" class="donation-btn">Learn More</a>
                                    }
                                </div>
                                <div class="fund-wrap d-flex align-items-center justify-content-between">
                                    <h5 class="fund"><span>Goal:</span> @cause.GoalAmount.ToString("C0")</h5>
                                    <h5 class="fund"><span>Raised:</span> @cause.RaisedAmount.ToString("C0")</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                delay += 0.1;
            }

            <div class="bottom-btn text-center mt-25 wow fadeInUp" data-wow-delay="@(delay)s">
                <a class="ht-btn style-2" href="/causes/grid">See All Causes (Grid View)</a>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="bi bi-heart" style="font-size: 4rem; color: #ccc;"></i>
                        <h3 class="mt-3">No Causes Found</h3>
                        <p class="text-muted">
                            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                            {
                                <text>No causes match your search "@ViewBag.SearchTerm". Try a different search term.</text>
                            }
                            else
                            {
                                <text>Check back soon for new causes to support.</text>
                            }
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<!-- cause-section end -->

<!-- newsletter-section start -->
<div class="newsletter-section position-relative z-1">
    <img class="shape-1 position-absolute ml-100 mt-50 d-none d-lg-inline-block"
         src="~/assets/img/shape/shape-8.png" alt="shape">
    <div class="container">
        <div class="row align-items-center newsletter-border pt-50">
            <div class="col-lg-6">
                <div class="title-one text-lg-start text-center">
                    <h2 class="title">Subscribe to Regular Newsletters.</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="subscribe-form sub-form-2 text-lg-end mb-25">
                    <input type="text" placeholder="Enter Your Mail">
                    <button type="submit">Subscribe</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- newsletter-section end -->

</main>
