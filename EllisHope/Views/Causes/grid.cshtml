@model IEnumerable<EllisHope.Models.Domain.Cause>
@{
    ViewBag.Title = "Causes - Grid View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>

<!-- page-title-area start -->
<div class="page-title-area">
    <div class="breadcrumb-wrapper" data-background="/assets/img/templates/causes/header-banner.jpg">
        <img class="shape-1" src="~/assets/img/shape/shape-81.png" alt="shape">
        <img class="shape-2" src="~/assets/img/shape/shape-82.png" alt="shape">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <h2 class="breadcrumb-title">Our Causes</h2>
                <ul class="breadcrumb-menu">
                    <li>
                        <a href="/home/">Home</a>
                    </li>
                    <li>
                        <a href="/causes">Causes</a>
                    </li>
                    <li>
                        <a href="#">Grid View</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- page-title-area end -->

<!-- cause-section start -->
<section class="cause-section pt-180 pb-170 pt-lg-100 pb-lg-60">
    <div class="container">
        <div class="row align-items-center justify-content-center mb-70">
            <div class="col-lg-8">
                <div class="title-one text-center">
                    <h5 class="sub-title wow fadeInUp">Support Our Causes</h5>
                    <h2 class="title wow fadeInUp" data-wow-delay="0.1s">
                        Make a Difference
                        <span class="position-relative">
                            Today
                            <img class="title-img" src="~/assets/img/shape/shape-3.png" alt="shape">
                        </span>
                    </h2>
                </div>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var cause in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="causes-wrap-2 h-100">
                            <div class="cause-thumb">
                                @if (!string.IsNullOrEmpty(cause.FeaturedImageUrl))
                                {
                                    <img src="@cause.FeaturedImageUrl" alt="@cause.Title">
                                }
                                else
                                {
                                    <img src="~/assets/img/cause/img-5.jpg" alt="@cause.Title">
                                }
                                @if (!string.IsNullOrEmpty(cause.Category))
                                {
                                    <div class="cause-tag">@cause.Category.ToLower()</div>
                                }
                                @if (cause.IsFeatured)
                                {
                                    <div class="cause-tag" style="left: auto; right: 10px; background: #ffc107;">
                                        <i class="bi bi-star-fill"></i>
                                    </div>
                                }
                            </div>
                            <div class="cause-content d-flex flex-column">
                                <h3 class="cause-title">
                                    <a href="/causes/details/@cause.Slug">
                                        @cause.Title
                                    </a>
                                </h3>
                                <p class="description flex-grow-1">
                                    @(cause.ShortDescription ?? (cause.Description?.Length > 120 ? cause.Description.Substring(0, 120) + "..." : cause.Description))
                                </p>
                                <div class="progress mb-3">
                                    <div class="progress-bar @(cause.ProgressPercentage >= 100 ? "bg-success" : "")" 
                                         role="progressbar" 
                                         aria-valuenow="@cause.ProgressPercentage"
                                         aria-valuemin="0" 
                                         aria-valuemax="100" 
                                         style="width: @(Math.Min(cause.ProgressPercentage, 100))%">
                                        <span class="progress-value">@cause.ProgressPercentage%</span>
                                    </div>
                                </div>
                                <div class="fund-wrap d-flex align-items-center justify-content-between mb-3">
                                    <h5 class="fund"><span>Goal:</span> @cause.GoalAmount.ToString("C0")</h5>
                                    <h5 class="fund"><span>Raised:</span> @cause.RaisedAmount.ToString("C0")</h5>
                                </div>
                                @if (!string.IsNullOrEmpty(cause.DonationUrl))
                                {
                                    <a href="@cause.DonationUrl" target="_blank" class="donation-btn">Donate Now</a>
                                }
                                else
                                {
                                    <a href="/causes/details/@cause.Slug" class="donation-btn">Learn More</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="row mt-5">
                <div class="col-12 text-center">
                    <a href="/causes" class="ht-btn style-2">View List View</a>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="bi bi-heart" style="font-size: 4rem; color: #ccc;"></i>
                        <h3 class="mt-3">No Causes Available</h3>
                        <p class="text-muted">Check back soon for new causes to support.</p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<!-- cause-section end -->

<!-- newsletter-section start -->
<div class="newsletter-section position-relative z-1">
    <img class="shape-1 position-absolute ml-100 mt-50 d-none d-lg-inline-block"
         src="~/assets/img/shape/shape-8.png" alt="shape">
    <div class="container">
        <div class="row align-items-center newsletter-border pt-50">
            <div class="col-lg-6">
                <div class="title-one text-lg-start text-center">
                    <h2 class="title">Subscribe to Regular Newsletters.</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="subscribe-form sub-form-2 text-lg-end mb-25">
                    <input type="text" placeholder="Enter Your Mail">
                    <button type="submit">Subscribe</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- newsletter-section end -->

</main>
