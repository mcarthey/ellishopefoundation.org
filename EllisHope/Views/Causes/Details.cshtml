@model EllisHope.Models.Domain.Cause
@inject EllisHope.Services.ISiteSettingsService SiteSettings
@{
    ViewBag.Title = Model?.Title ?? "Cause Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var defaultDonateUrl = await SiteSettings.GetDefaultDonationUrlAsync() ?? "/contact";
    var givebutterAccountId = await SiteSettings.GetGivebutterAccountIdAsync();
    var givebutterWidgetId = await SiteSettings.GetDefaultWidgetIdAsync();
    var similarCauses = ViewBag.SimilarCauses as IEnumerable<EllisHope.Models.Domain.Cause> ?? Enumerable.Empty<EllisHope.Models.Domain.Cause>();
    var featuredCauses = ViewBag.FeaturedCauses as IEnumerable<EllisHope.Models.Domain.Cause> ?? Enumerable.Empty<EllisHope.Models.Domain.Cause>();
}

<main>

<!-- page-title-area start -->
<div class="page-title-area">
    <div class="breadcrumb-wrapper" data-background="/assets/img/templates/causes/header-banner.jpg">
        <img class="shape-1" src="~/assets/img/shape/shape-81.png" alt="shape">
        <img class="shape-2" src="~/assets/img/shape/shape-82.png" alt="shape">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <h2 class="breadcrumb-title">Cause Details</h2>
                <ul class="breadcrumb-menu">
                    <li>
                        <a href="/home/">Home</a>
                    </li>
                    <li>
                        <a href="/causes">Causes</a>
                    </li>
                    <li>
                        <a href="#">@Model?.Title</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- page-title-area end -->

<!-- cause-section start -->
<section class="cause-section pt-180 pb-120 pt-lg-100 pb-lg-60">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-8">
                <div class="title-one text-lg-start text-center mb-70">
                    <h2 class="title">
                        <span class="position-relative">
                            @Model?.Title
                            <img class="title-img" src="~/assets/img/shape/shape-3.png" alt="shape">
                        </span>
                    </h2>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="text-lg-end text-center">
                    @if (Model?.IsFeatured == true)
                    {
                        <span class="badge bg-warning text-dark mb-2"><i class="bi bi-star-fill"></i> Featured Cause</span>
                    }
                    @if (!string.IsNullOrEmpty(Model?.Category))
                    {
                        <p class="text-theme text-uppercase">
                            <span class="badge bg-secondary">@Model.Category</span>
                        </p>
                    }
                </div>
            </div>
        </div>

        <div class="causes-details-wrapper">
            <div class="cause-thumb mb-50">
                @if (!string.IsNullOrEmpty(Model?.FeaturedImageUrl))
                {
                    <img class="img-fluid" src="@Model.FeaturedImageUrl" alt="@Model.Title">
                }
                else
                {
                    <img class="img-fluid" src="~/assets/img/cause/img-23.jpg" alt="@Model?.Title">
                }
                @if (!string.IsNullOrEmpty(Model?.Category))
                {
                    <div class="cause-tag">@Model.Category.ToLower()</div>
                }
            </div>

            <ul class="cause-info d-lg-flex justify-content-between align-items-center">
                <li>
                    <div class="fund-wrap">
                        <p class="label">Goal:</p>
                        <h5 class="fund">@Model?.GoalAmount.ToString("C0")</h5>
                    </div>
                </li>
                <li>
                    <div class="fund-wrap">
                        <p class="label">Raised:</p>
                        <h5 class="fund">@Model?.RaisedAmount.ToString("C0")</h5>
                    </div>
                </li>
                <li>
                    <div class="label pb-20">Progress:</div>
                    <div class="progress" style="width: 200px;">
                        <div class="progress-bar @(Model?.ProgressPercentage >= 100 ? "bg-success" : "")" 
                             role="progressbar" 
                             aria-valuenow="@Model?.ProgressPercentage" 
                             aria-valuemin="0"
                             aria-valuemax="100" 
                             style="width: @(Math.Min(Model?.ProgressPercentage ?? 0, 100))%">
                            <span class="progress-value">@Model?.ProgressPercentage%</span>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="donation-btn-wrapper">
                        @if (!string.IsNullOrEmpty(Model?.DonationUrl))
                        {
                            <a href="@Model.DonationUrl" target="_blank" class="donation-btn">Donate Now</a>
                        }
                        else
                        {
                            <a href="@defaultDonateUrl" target="_blank" class="donation-btn"
                               data-gb-account="@givebutterAccountId" data-gb-campaign="@givebutterWidgetId">Donate Now</a>
                        }
                    </div>
                </li>
            </ul>

            <h3 class="cause-title mt-60">
                Overview
            </h3>
            <div class="description">
                @Html.Raw(Model?.Description)
            </div>

            @if (Model?.StartDate.HasValue == true || Model?.EndDate.HasValue == true)
            {
                <div class="alert alert-info mt-4">
                    <h5><i class="bi bi-calendar-event"></i> Campaign Dates</h5>
                    @if (Model.StartDate.HasValue)
                    {
                        <p class="mb-1"><strong>Start Date:</strong> @Model.StartDate.Value.ToString("MMMM dd, yyyy")</p>
                    }
                    @if (Model.EndDate.HasValue)
                    {
                        <p class="mb-0"><strong>End Date:</strong> @Model.EndDate.Value.ToString("MMMM dd, yyyy")</p>
                        @if (Model.EndDate.Value < DateTime.Now)
                        {
                            <span class="badge bg-secondary mt-2">Campaign Ended</span>
                        }
                    }
                </div>
            }
        </div>
    </div>
</section>
<!-- cause-section end -->

<!-- Similar causes section start -->
@if (similarCauses.Any() || featuredCauses.Any())
{
    <section class="cause-section pt-140 pb-95 pt-lg-60 pb-lg-15" data-bg-color="#FDF3F0">
        <div class="container">
            <div class="row align-items-center justify-content-center mb-20">
                <div class="col-lg-12">
                    <div class="title-two text-center mb-30">
                        <h2 class="title">@(similarCauses.Any() ? "Similar Causes" : "Featured Causes")</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                @foreach (var cause in (similarCauses.Any() ? similarCauses : featuredCauses).Take(3))
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="causes-wrap-2">
                            <div class="cause-thumb">
                                @if (!string.IsNullOrEmpty(cause.FeaturedImageUrl))
                                {
                                    <img src="@cause.FeaturedImageUrl" alt="@cause.Title">
                                }
                                else
                                {
                                    <img src="~/assets/img/cause/img-5.jpg" alt="@cause.Title">
                                }
                                @if (!string.IsNullOrEmpty(cause.Category))
                                {
                                    <div class="cause-tag">@cause.Category.ToLower()</div>
                                }
                            </div>
                            <div class="cause-content">
                                <h3 class="cause-title">
                                    <a href="/causes/details/@cause.Slug">
                                        @cause.Title
                                    </a>
                                </h3>
                                <p class="description">
                                    @(cause.ShortDescription ?? (cause.Description?.Length > 100 ? cause.Description.Substring(0, 100) + "..." : cause.Description))
                                </p>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="@cause.ProgressPercentage"
                                         aria-valuemin="0" aria-valuemax="100" style="width: @(Math.Min(cause.ProgressPercentage, 100))%">
                                        <span class="progress-value">@cause.ProgressPercentage%</span>
                                    </div>
                                </div>
                                <div class="fund-wrap d-flex align-items-center justify-content-between">
                                    <h5 class="fund"><span>Goal:</span> @cause.GoalAmount.ToString("C0")</h5>
                                    <h5 class="fund"><span>Raised:</span> @cause.RaisedAmount.ToString("C0")</h5>
                                </div>
                                @if (!string.IsNullOrEmpty(cause.DonationUrl))
                                {
                                    <a href="@cause.DonationUrl" target="_blank" class="donation-btn">Donate Now</a>
                                }
                                else
                                {
                                    <a href="/causes/details/@cause.Slug" class="donation-btn">Learn More</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-12 text-center mt-4">
                    <a href="/causes" class="ht-btn style-2">View All Causes</a>
                </div>
            </div>
        </div>
    </section>
}
<!-- Similar causes section end -->

<!-- newsletter-section start -->
<div class="newsletter-section position-relative z-1 pt-180 pt-lg-60">
    <img class="shape-1 position-absolute ml-100 mt-50 d-none d-lg-inline-block"
         src="~/assets/img/shape/shape-8.png" alt="shape">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="title-one text-lg-start text-center">
                    <h2 class="title">Subscribe to Regular Newsletters.</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="subscribe-form sub-form-2 text-lg-end mb-25">
                    <input type="text" placeholder="Enter Your Mail">
                    <button type="submit">Subscribe</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- newsletter-section end -->

</main>
