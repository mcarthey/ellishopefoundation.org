@model EllisHope.Models.ViewModels.MediaEditViewModel
@{
    ViewData["Title"] = "Edit Media";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Edit Media</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Media Library
    </a>
</div>

<div class="row">
    <div class="col-md-5">
        <!-- Image Preview Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Preview</h5>
            </div>
            <div class="card-body text-center">
                <img src="@Model.FilePath" alt="@Model.AltText" class="img-fluid mb-3" style="max-height: 400px;">

                @if (Model.Source == EllisHope.Models.Domain.MediaSource.Unsplash)
                {
                    <div class="alert alert-info small">
                        <i class="bi bi-cloud-download"></i>
                        Photo by <a href="https://unsplash.com/@@(@Model.UnsplashPhotographerUsername)?utm_source=EllisHopeFoundation&utm_medium=referral" target="_blank">@Model.UnsplashPhotographer</a> on <a href="https://unsplash.com/?utm_source=EllisHopeFoundation&utm_medium=referral" target="_blank">Unsplash</a>
                    </div>
                }
            </div>
        </div>

        <!-- Image Details Card -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Details</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm mb-0">
                    <tr>
                        <th style="width: 40%;">File Name:</th>
                        <td>@Model.FileName</td>
                    </tr>
                    <tr>
                        <th>Dimensions:</th>
                        <td>@(Model.Width) Ã— @(Model.Height)</td>
                    </tr>
                    <tr>
                        <th>File Size:</th>
                        <td>@(Model.FileSize / 1024) KB</td>
                    </tr>
                    <tr>
                        <th>Source:</th>
                        <td>
                            @if (Model.Source == EllisHope.Models.Domain.MediaSource.Local)
                            {
                                <span class="badge bg-primary">Local</span>
                            }
                            else
                            {
                                <span class="badge bg-info">Unsplash</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Uploaded:</th>
                        <td>@Model.UploadedDate.ToString("MMM dd, yyyy HH:mm")</td>
                    </tr>
                </table>

                @if (Model.IsInUse)
                {
                    <div class="mt-3">
                        <a asp-action="Usages" asp-route-id="@Model.Id" class="btn btn-sm btn-info w-100">
                            <i class="bi bi-list-ul"></i> View @Model.Usages.Count() Usage(s)
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Edit Metadata</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Title</label>
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AltText" class="form-label">Alt Text</label>
                        <input asp-for="AltText" class="form-control">
                        <span asp-validation-for="AltText" class="text-danger"></span>
                        <div class="form-text">Used for accessibility and SEO</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Caption" class="form-label">Caption</label>
                        <textarea asp-for="Caption" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Caption" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label">Category</label>
                        <select asp-for="Category" class="form-select">
                            @foreach (var category in Enum.GetValues<EllisHope.Models.Domain.MediaCategory>())
                            {
                                <option value="@((int)category)">@category</option>
                            }
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Tags" class="form-label">Tags</label>
                        <input asp-for="Tags" class="form-control">
                        <span asp-validation-for="Tags" class="text-danger"></span>
                        <div class="form-text">Separate multiple tags with commas</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Direct URL</label>
                        <div class="input-group">
                            <input type="text" class="form-control" value="@Model.FilePath" readonly id="mediaUrl">
                            <button class="btn btn-outline-secondary" type="button" onclick="copyUrl()">
                                <i class="bi bi-clipboard"></i> Copy
                            </button>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (!Model.IsInUse)
        {
            <div class="card mt-3 border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Danger Zone</h5>
                </div>
                <div class="card-body">
                    <p>Once you delete this media, there is no going back. Please be certain.</p>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this image?');">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Media
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function copyUrl() {
            const urlInput = document.getElementById('mediaUrl');
            urlInput.select();
            document.execCommand('copy');

            const btn = event.target.closest('button');
            const originalHtml = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-check"></i> Copied!';
            setTimeout(() => {
                btn.innerHTML = originalHtml;
            }, 2000);
        }
    </script>
}
