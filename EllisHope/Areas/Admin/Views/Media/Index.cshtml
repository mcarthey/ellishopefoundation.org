@model EllisHope.Models.ViewModels.MediaLibraryViewModel
@{
    ViewData["Title"] = "Media Library";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Media Library</h2>
    <div>
        <a asp-action="Upload" class="btn btn-primary me-2">
            <i class="bi bi-upload"></i> Upload Image
        </a>
        <a asp-action="UnsplashSearch" class="btn btn-outline-primary me-2">
            <i class="bi bi-images"></i> Browse Unsplash
        </a>
        <div class="btn-group">
            <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                <i class="bi bi-tools"></i> Maintenance
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#unusedMediaModal">
                        <i class="bi bi-trash"></i> Find Unused Media
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#duplicatesModal">
                        <i class="bi bi-files"></i> Find Duplicates
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="MediaMigration" asp-action="Index">
                        <i class="bi bi-arrow-left-right"></i> Migration Tool
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Statistics -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h6 class="text-muted">Total Images</h6>
                <h3>@Model.TotalMediaCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h6 class="text-muted">Total Storage</h6>
                <h3>@(Model.TotalStorageSize / 1024 / 1024) MB</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h6 class="text-muted">By Category</h6>
                <div class="small">
                    @foreach (var cat in Model.MediaCountByCategory.OrderByDescending(x => x.Value).Take(3))
                    {
                        <div>@cat.Key: @cat.Value</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-5">
                <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by filename, title, alt text, or tags...">
            </div>
            <div class="col-md-3">
                <select name="category" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in Enum.GetValues<EllisHope.Models.Domain.MediaCategory>())
                    {
                        <option value="@((int)category)" selected="@(Model.FilterCategory == category)">@category</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <select name="source" class="form-select">
                    <option value="">All Sources</option>
                    @foreach (var source in Enum.GetValues<EllisHope.Models.Domain.MediaSource>())
                    {
                        <option value="@((int)source)" selected="@(Model.FilterSource == source)">@source</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Media Grid -->
<div class="card">
    <div class="card-body">
        @if (Model.Media.Any())
        {
            <div class="row g-3">
                @foreach (var media in Model.Media)
                {
                    <div class="col-lg-2 col-md-3 col-sm-4 col-6">
                        <div class="card h-100">
                            <div class="position-relative" style="padding-top: 100%; overflow: hidden;">
                                <img src="@media.FilePath"
                                     alt="@media.AltText"
                                     class="position-absolute top-0 start-0 w-100 h-100"
                                     style="object-fit: cover; cursor: pointer;"
                                     data-bs-toggle="modal"
                                     data-bs-target="#mediaModal-@media.Id">

                                @if (media.Source == EllisHope.Models.Domain.MediaSource.Unsplash)
                                {
                                    <span class="badge bg-info position-absolute top-0 end-0 m-1">
                                        <i class="bi bi-cloud-download"></i>
                                    </span>
                                }
                            </div>
                            <div class="card-body p-2">
                                <p class="small mb-1 text-truncate" title="@media.FileName">
                                    <strong>@media.FileName</strong>
                                </p>
                                <p class="small text-muted mb-1">
                                    @(media.Width) × @(media.Height)
                                </p>
                                <span class="badge bg-secondary small">@media.Category</span>
                            </div>
                            <div class="card-footer p-2 d-flex justify-content-between">
                                <a asp-action="Edit" asp-route-id="@media.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal-@media.Id">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Media Detail Modal -->
                    <div class="modal fade" id="mediaModal-@media.Id" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">@media.FileName</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <img src="@media.FilePath" alt="@media.AltText" class="img-fluid mb-3">
                                    <table class="table table-sm">
                                        <tr><th>Dimensions:</th><td>@(media.Width) × @(media.Height)</td></tr>
                                        <tr><th>File Size:</th><td>@(media.FileSize / 1024) KB</td></tr>
                                        <tr><th>Category:</th><td>@media.Category</td></tr>
                                        <tr><th>Source:</th><td>@media.Source</td></tr>
                                        @if (!string.IsNullOrEmpty(media.AltText))
                                        {
                                            <tr><th>Alt Text:</th><td>@media.AltText</td></tr>
                                        }
                                        @if (!string.IsNullOrEmpty(media.Title))
                                        {
                                            <tr><th>Title:</th><td>@media.Title</td></tr>
                                        }
                                        @if (!string.IsNullOrEmpty(media.Tags))
                                        {
                                            <tr><th>Tags:</th><td>@media.Tags</td></tr>
                                        }
                                        @if (media.Source == EllisHope.Models.Domain.MediaSource.Unsplash)
                                        {
                                            <tr>
                                                <th>Photographer:</th>
                                                <td>
                                                    <a href="https://unsplash.com/@@(@media.UnsplashPhotographerUsername)" target="_blank">
                                                        @media.UnsplashPhotographer
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                        <tr><th>Uploaded:</th><td>@media.UploadedDate.ToString("MMM dd, yyyy HH:mm")</td></tr>
                                    </table>
                                    <div class="mt-3">
                                        <label class="form-label">Direct URL:</label>
                                        <input type="text" class="form-control" value="@media.FilePath" readonly onclick="this.select()">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <a asp-action="Usages" asp-route-id="@media.Id" class="btn btn-info">
                                        <i class="bi bi-list-ul"></i> View Usages
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@media.Id" class="btn btn-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Confirmation Modal -->
                    <div class="modal fade" id="deleteModal-@media.Id" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Confirm Delete</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this image?</p>
                                    <p><strong>@media.FileName</strong></p>
                                    @if (media.Usages.Any())
                                    {
                                        <div class="alert alert-warning">
                                            <i class="bi bi-exclamation-triangle"></i>
                                            This image is currently used in @media.Usages.Count location(s).
                                        </div>
                                    }
                                </div>
                                <div class="modal-footer">
                                    <form asp-action="Delete" asp-route-id="@media.Id" method="post" class="d-inline">
                                        @if (media.Usages.Any())
                                        {
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="checkbox" name="force" value="true" id="force-@media.Id">
                                                <label class="form-check-label" for="force-@media.Id">
                                                    Force delete (remove from all usages)
                                                </label>
                                            </div>
                                        }
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-images" style="font-size: 48px; color: #ccc;"></i>
                <h4 class="mt-3">No media found</h4>
                <p class="text-muted">Upload images or import from Unsplash to get started</p>
                <div class="mt-3">
                    <a asp-action="Upload" class="btn btn-primary me-2">
                        <i class="bi bi-upload"></i> Upload Image
                    </a>
                    <a asp-action="UnsplashSearch" class="btn btn-outline-primary">
                        <i class="bi bi-images"></i> Browse Unsplash
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Unused Media Modal -->
<div class="modal fade" id="unusedMediaModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-trash"></i> Unused Media Files</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted">Loading unused media...</p>
                <div id="unusedMediaContent"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Duplicates Modal -->
<div class="modal fade" id="duplicatesModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-files"></i> Duplicate Images</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted">Loading duplicates...</p>
                <div id="duplicatesContent"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-warning" id="removeDuplicatesBtn" style="display:none;">
                    <i class="bi bi-trash"></i> Remove All Duplicates
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load unused media when modal opens
        $('#unusedMediaModal').on('show.bs.modal', function () {
            fetch('/Admin/Media/GetUnusedMedia')
                .then(response => response.json())
                .then(data => {
                    const content = document.getElementById('unusedMediaContent');
                    if (data.length === 0) {
                        content.innerHTML = '<div class="alert alert-success"><i class="bi bi-check-circle"></i> No unused media found! All images are in use.</div>';
                    } else {
                        let html = `
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i>
                                Found <strong>${data.length}</strong> unused images. These can be safely deleted.
                            </div>
                            <div class="row g-3">
                        `;
                        
                        data.forEach(media => {
                            html += `
                                <div class="col-md-2">
                                    <div class="card">
                                        <img src="${media.filePath}" alt="${media.fileName}" class="card-img-top" style="height: 120px; object-fit: cover;">
                                        <div class="card-body p-2">
                                            <p class="small mb-1 text-truncate" title="${media.fileName}">${media.fileName}</p>
                                            <small class="text-muted">${(media.fileSize / 1024).toFixed(0)} KB</small>
                                        </div>
                                        <div class="card-footer p-2">
                                            <button class="btn btn-sm btn-danger w-100" onclick="deleteUnused(${media.id})">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            `;
                        });
                        
                        html += `</div>
                            <div class="mt-3">
                                <button class="btn btn-danger" onclick="deleteAllUnused()">
                                    <i class="bi bi-trash"></i> Delete All Unused (${data.length})
                                </button>
                            </div>
                        `;
                        content.innerHTML = html;
                    }
                })
                .catch(error => {
                    document.getElementById('unusedMediaContent').innerHTML = 
                        '<div class="alert alert-danger">Error loading unused media</div>';
                });
        });

        // Load duplicates when modal opens
        $('#duplicatesModal').on('show.bs.modal', function () {
            fetch('/Admin/Media/GetDuplicates')
                .then(response => response.json())
                .then(data => {
                    const content = document.getElementById('duplicatesContent');
                    const removeBtn = document.getElementById('removeDuplicatesBtn');
                    
                    if (data.length === 0) {
                        content.innerHTML = '<div class="alert alert-success"><i class="bi bi-check-circle"></i> No duplicates found!</div>';
                        removeBtn.style.display = 'none';
                    } else {
                        let html = `
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i>
                                Found <strong>${data.length}</strong> sets of duplicate images.
                                The oldest image in each set will be kept, others will be deleted.
                            </div>
                        `;
                        
                        data.forEach(group => {
                            html += `
                                <div class="card mb-3">
                                    <div class="card-header">
                                        <strong>Duplicate Set</strong> - ${group.length} images (Hash: ${group[0].fileHash?.substring(0, 16)}...)
                                    </div>
                                    <div class="card-body">
                                        <div class="row g-2">
                            `;
                            
                            group.forEach((media, index) => {
                                const isOldest = index === 0;
                                html += `
                                    <div class="col-md-2">
                                        <div class="card ${isOldest ? 'border-success' : 'border-danger'}">
                                            <img src="${media.filePath}" class="card-img-top" style="height: 100px; object-fit: cover;">
                                            <div class="card-body p-2">
                                                <p class="small mb-0 text-truncate">${media.fileName}</p>
                                                <small class="text-muted">${new Date(media.uploadedDate).toLocaleDateString()}</small>
                                                ${isOldest ? '<span class="badge bg-success w-100 mt-1">Keep</span>' : '<span class="badge bg-danger w-100 mt-1">Delete</span>'}
                                            </div>
                                        </div>
                                    </div>
                                `;
                            });
                            
                            html += `
                                        </div>
                                    </div>
                                </div>
                            `;
                        });
                        
                        content.innerHTML = html;
                        removeBtn.style.display = 'block';
                    }
                })
                .catch(error => {
                    document.getElementById('duplicatesContent').innerHTML = 
                        '<div class="alert alert-danger">Error loading duplicates</div>';
                });
        });

        // Remove all duplicates
        document.getElementById('removeDuplicatesBtn')?.addEventListener('click', function() {
            if (confirm('Are you sure you want to remove all duplicate images? The oldest image in each set will be kept.')) {
                fetch('/Admin/Media/RemoveDuplicates', { method: 'POST' })
                    .then(response => response.json())
                    .then(data => {
                        alert(`Removed ${data.removed} duplicate images`);
                        location.reload();
                    })
                    .catch(error => alert('Error removing duplicates'));
            }
        });

        // Delete single unused image
        function deleteUnused(id) {
            if (confirm('Delete this image?')) {
                fetch(`/Admin/Media/Delete/${id}`, { 
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: new URLSearchParams({ force: 'false' })
                })
                .then(() => {
                    alert('Image deleted');
                    $('#unusedMediaModal').modal('hide');
                    location.reload();
                })
                .catch(error => alert('Error deleting image'));
            }
        }

        // Delete all unused images
        function deleteAllUnused() {
            if (confirm('Are you sure you want to delete ALL unused images? This cannot be undone.')) {
                fetch('/Admin/Media/DeleteAllUnused', { method: 'POST' })
                    .then(response => response.json())
                    .then(data => {
                        alert(`Deleted ${data.deleted} unused images`);
                        location.reload();
                    })
                    .catch(error => alert('Error deleting images'));
            }
        }
    </script>
}
