@model EllisHope.Services.MediaMigrationReport
@{
    ViewData["Title"] = "Media Migration Tool";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-arrow-left-right"></i> Media Migration Tool</h2>
    <a asp-area="Admin" asp-controller="Media" asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Media Library
    </a>
</div>

@if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!string.IsNullOrEmpty(TempData["WarningMessage"]?.ToString()))
{
    <div class="alert alert-warning alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle"></i> @TempData["WarningMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!string.IsNullOrEmpty(TempData["ErrorMessage"]?.ToString()))
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null)
{
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h1 class="display-4 text-primary">@Model.TotalLegacyImages</h1>
                    <p class="text-muted mb-0">Legacy Images Found</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <h1 class="display-4 text-info">@((Model.TotalSizeBytes / 1024.0 / 1024.0).ToString("F2"))</h1>
                    <p class="text-muted mb-0">MB Total Size</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h1 class="display-4 text-success">@Model.DatabaseReferencesFound</h1>
                    <p class="text-muted mb-0">Database References</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <h1 class="display-4 text-danger">@Model.BrokenReferences</h1>
                    <p class="text-muted mb-0">Broken References</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-folder2-open"></i> Legacy Directories</h5>
                </div>
                <div class="card-body">
                    @if (Model.Directories.Any())
                    {
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong>Blog Images</strong>
                                <span class="badge bg-primary rounded-pill">@Model.BlogImages files</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong>Event Images</strong>
                                <span class="badge bg-primary rounded-pill">@Model.EventImages files</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong>Cause Images</strong>
                                <span class="badge bg-primary rounded-pill">@Model.CauseImages files</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <strong>Unsplash Images</strong>
                                <span class="badge bg-info rounded-pill">@Model.UnsplashImages files</span>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No legacy images found</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Migration Actions</h5>
                </div>
                <div class="card-body">
                    @if (Model.TotalLegacyImages > 0)
                    {
                        <form asp-action="Migrate" method="post">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="updateDatabaseReferences" 
                                           id="updateDb" checked>
                                    <label class="form-check-label" for="updateDb">
                                        Update database references
                                    </label>
                                    <small class="form-text text-muted d-block">
                                        Automatically update BlogPosts, Events, and Causes to point to new image locations
                                    </small>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="deleteOldFiles" id="deleteOld">
                                    <label class="form-check-label" for="deleteOld">
                                        Delete old files after migration
                                    </label>
                                    <small class="form-text text-muted d-block text-danger">
                                        ?? Warning: This will permanently delete files from legacy directories
                                    </small>
                                </div>
                            </div>

                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i>
                                <strong>What will happen:</strong>
                                <ol class="mb-0 mt-2">
                                    <li>Copy all images to <code>/uploads/media/</code></li>
                                    <li>Add entries to Media Library database</li>
                                    <li>Detect and skip duplicates</li>
                                    <li>Update database references (if checked)</li>
                                    <li>Delete old files (if checked)</li>
                                </ol>
                            </div>

                            <button type="submit" class="btn btn-success w-100 mb-2" 
                                    onclick="return confirm('Are you sure you want to migrate all images? This will process @Model.TotalLegacyImages files.')">
                                <i class="bi bi-arrow-right-circle"></i> Migrate All Images
                            </button>
                        </form>

                        <form asp-action="RemoveDuplicates" method="post" class="mt-2">
                            <button type="submit" class="btn btn-warning w-100" 
                                    onclick="return confirm('This will remove duplicate images based on file hash. Continue?')">
                                <i class="bi bi-files"></i> Remove Duplicates
                            </button>
                        </form>

                        @if (Model.BrokenReferences > 0)
                        {
                            <a asp-action="BrokenReferences" class="btn btn-danger w-100 mt-2">
                                <i class="bi bi-exclamation-triangle"></i> View @Model.BrokenReferences Broken References
                            </a>
                        }
                    }
                    else
                    {
                        <div class="alert alert-success mb-0">
                            <i class="bi bi-check-circle"></i>
                            <strong>All clean!</strong> No legacy images found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-info-circle"></i> Migration Guide</h5>
        </div>
        <div class="card-body">
            <h6>What is this tool?</h6>
            <p>
                This tool migrates images from old scattered locations to the new centralized Media Library system.
            </p>

            <h6>Current Structure (Legacy):</h6>
            <ul>
                <li><code>/uploads/blog/</code> - Blog post images</li>
                <li><code>/uploads/events/</code> - Event images</li>
                <li><code>/uploads/causes/</code> - Cause images</li>
                <li><code>/Unsplash/</code> - Unsplash imports</li>
            </ul>

            <h6>New Structure (Centralized):</h6>
            <ul>
                <li><code>/uploads/media/</code> - ALL images in one place</li>
                <li><code>/uploads/media/unsplash/</code> - Unsplash imports</li>
            </ul>

            <h6>Benefits:</h6>
            <ul>
                <li>? Images shared across all content types</li>
                <li>? No duplicate uploads</li>
                <li>? Better organization and search</li>
                <li>? Usage tracking</li>
                <li>? Easier to manage</li>
            </ul>

            <h6>Recommended Steps:</h6>
            <ol>
                <li><strong>Backup</strong> - Create a backup of your <code>wwwroot/uploads/</code> folder</li>
                <li><strong>Migrate</strong> - Run migration with "Update database references" checked</li>
                <li><strong>Test</strong> - Verify your blog posts, events, and causes display correctly</li>
                <li><strong>Remove Duplicates</strong> - Clean up any duplicate images</li>
                <li><strong>Delete Old Files</strong> - Once confirmed working, re-run with "Delete old files" checked</li>
            </ol>

            <div class="alert alert-warning mb-0">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Important:</strong> Always create a backup before running migration!
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Loading migration report...
    </div>
}
