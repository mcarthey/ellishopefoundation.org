@model List<EllisHope.Services.BrokenMediaReference>
@{
    ViewData["Title"] = "Broken Media References";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-exclamation-triangle text-danger"></i> Broken Media References</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Migration Tool
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i>
        <strong>Found @Model.Count broken references</strong> - These content items reference images that don't exist.
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Broken References by Type</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Missing Path</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-secondary">@item.EntityType</span>
                                </td>
                                <td>@item.EntityId</td>
                                <td>
                                    <strong>@item.EntityTitle</strong>
                                </td>
                                <td>
                                    <code class="text-danger">@item.OldPath</code>
                                </td>
                                <td>
                                    @switch (item.EntityType)
                                    {
                                        case "BlogPost":
                                            <a asp-area="Admin" asp-controller="Blog" asp-action="Edit" 
                                               asp-route-id="@item.EntityId" class="btn btn-sm btn-primary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            break;
                                        case "Event":
                                            <a asp-area="Admin" asp-controller="Events" asp-action="Edit" 
                                               asp-route-id="@item.EntityId" class="btn btn-sm btn-primary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            break;
                                        case "Cause":
                                            <a asp-area="Admin" asp-controller="Causes" asp-action="Edit" 
                                               asp-route-id="@item.EntityId" class="btn btn-sm btn-primary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            break;
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-lightbulb"></i> How to Fix</h5>
        </div>
        <div class="card-body">
            <p><strong>Option 1: Run Migration</strong></p>
            <ul>
                <li>Go back to the Migration Tool</li>
                <li>Run "Migrate All Images" with "Update database references" checked</li>
                <li>This will automatically fix these references if the files exist in legacy directories</li>
            </ul>

            <p><strong>Option 2: Manual Fix</strong></p>
            <ul>
                <li>Click "Edit" on each broken reference above</li>
                <li>Use the Media Picker to select a new image</li>
                <li>Save the content</li>
            </ul>

            <p><strong>Option 3: Remove References</strong></p>
            <ul>
                <li>If the images are truly lost and can't be recovered</li>
                <li>Edit each item and remove the broken image reference</li>
            </ul>

            <div class="alert alert-info mb-0">
                <i class="bi bi-info-circle"></i>
                Running the migration tool will attempt to locate and fix these automatically.
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i>
        <strong>No broken references found!</strong> All media references are valid.
    </div>
    <a asp-action="Index" class="btn btn-primary">
        <i class="bi bi-arrow-left"></i> Back to Migration Tool
    </a>
}
