@{
    ViewData["Title"] = "Events";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>
                    <i class="bi bi-calendar-event"></i> Upcoming Events
                </h2>
                <p class="text-muted">Community events and activities</p>
            </div>
            <a asp-action="Dashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body text-center py-5">
        <i class="bi bi-calendar-week fs-1 text-muted mb-3 d-block"></i>
        <h4>Events are listed on the main site</h4>
        <p class="text-muted">
            Visit our public events page to see all upcoming foundation events and activities.
        </p>
        <a asp-controller="Events" asp-action="Index" asp-area="" class="btn btn-primary">
            <i class="bi bi-box-arrow-up-right"></i> View All Events
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0">
            <i class="bi bi-lightbulb"></i> Event Registration (Coming Soon)
        </h5>
    </div>
    <div class="card-body">
        <p>
            We're working on a member event registration system that will allow you to:
        </p>
        <ul>
            <li>Register for events directly from your dashboard</li>
            <li>Receive event reminders and updates</li>
            <li>Track your event attendance history</li>
            <li>Get personalized event recommendations</li>
        </ul>
        <p class="mb-0 text-muted">
            <small>Until then, please register by contacting us or using the event pages directly.</small>
        </p>
    </div>
</div>
