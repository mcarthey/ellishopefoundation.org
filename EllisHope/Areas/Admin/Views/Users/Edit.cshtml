@model EllisHope.Areas.Admin.Models.UserEditViewModel
@{
    ViewData["Title"] = $"Edit {Model.FirstName} {Model.LastName}";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>
                    <i class="bi bi-pencil-square"></i> Edit User
                </h2>
                <p class="text-muted">@Model.FirstName @Model.LastName - @Model.Email</p>
            </div>
            <div class="btn-group">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                    <i class="bi bi-eye"></i> View Details
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-9">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="JoinedDate" />
            <input type="hidden" asp-for="LastLoginDate" />
            <input type="hidden" asp-for="ProfilePictureUrl" />
            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Basic Information -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person"></i> Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" type="tel" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Account Settings -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-shield-lock"></i> Account Settings
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="UserRole" class="form-label"></label>
                            <select asp-for="UserRole" class="form-select" asp-items="Html.GetEnumSelectList<EllisHope.Models.Domain.UserRole>()"></select>
                            <span asp-validation-for="UserRole" class="text-danger"></span>
                            <small class="form-text text-muted">Changing role will update Identity roles</small>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<EllisHope.Models.Domain.MembershipStatus>()"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="form-check mt-4">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-geo-alt"></i> Contact Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="State" class="form-label"></label>
                            <input asp-for="State" class="form-control" maxlength="2" placeholder="CA" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="ZipCode" class="form-label"></label>
                            <input asp-for="ZipCode" class="form-control" maxlength="10" />
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="EmergencyContactName" class="form-label"></label>
                            <input asp-for="EmergencyContactName" class="form-control" />
                            <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EmergencyContactPhone" class="form-label"></label>
                            <input asp-for="EmergencyContactPhone" class="form-control" type="tel" />
                            <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sponsor Assignment (Client only) -->
            @if (Model.UserRole == EllisHope.Models.Domain.UserRole.Client)
            {
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-person-heart"></i> Sponsor Assignment
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="SponsorId" class="form-label"></label>
                            <select asp-for="SponsorId" class="form-select">
                                <option value="">-- No Sponsor --</option>
                                @foreach (var sponsor in Model.AvailableSponsors)
                                {
                                    <option value="@sponsor.Id">@sponsor.DisplayName</option>
                                }
                            </select>
                            <span asp-validation-for="SponsorId" class="text-danger"></span>
                            <small class="form-text text-muted">Assign a sponsor to this client (optional)</small>
                        </div>
                    </div>
                </div>
            }

            <!-- Membership Information -->
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-credit-card"></i> Membership Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="MonthlyFee" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="MonthlyFee" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="MonthlyFee" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="MembershipStartDate" class="form-label"></label>
                            <input asp-for="MembershipStartDate" class="form-control" type="date" />
                            <span asp-validation-for="MembershipStartDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="MembershipEndDate" class="form-label"></label>
                            <input asp-for="MembershipEndDate" class="form-control" type="date" />
                            <span asp-validation-for="MembershipEndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Admin Notes -->
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-sticky"></i> Admin Notes
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="AdminNotes" class="form-label"></label>
                        <textarea asp-for="AdminNotes" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="AdminNotes" class="text-danger"></span>
                        <small class="form-text text-muted">Internal notes, not visible to the user</small>
                    </div>
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="d-flex gap-2 mb-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>

    <!-- Account Info Sidebar -->
    <div class="col-lg-3">
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle"></i> Account Info
                </h6>
            </div>
            <div class="card-body">
                <dl class="mb-0">
                    <dt>Joined</dt>
                    <dd>@Model.JoinedDate.ToString("MMM dd, yyyy")</dd>

                    <dt>Last Login</dt>
                    <dd>
                        @if (Model.LastLoginDate.HasValue)
                        {
                            @Model.LastLoginDate.Value.ToString("MMM dd, yyyy")
                        }
                        else
                        {
                            <span class="text-muted">Never</span>
                        }
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <dt>Profile Picture</dt>
                        <dd>
                            <img src="@Model.ProfilePictureUrl" alt="Profile" class="img-thumbnail" style="max-width: 150px;" />
                        </dd>
                    }
                </dl>
            </div>
        </div>

        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Important
                </h6>
            </div>
            <div class="card-body">
                <ul class="small mb-0">
                    <li>Changing the role will update ASP.NET Identity roles</li>
                    <li>Email cannot be changed if user has logged in</li>
                    <li>Deactivating will prevent user from logging in</li>
                    <li>To reset password, use separate function</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Show/hide sponsor dropdown based on role
        document.getElementById('UserRole').addEventListener('change', function() {
            var sponsorCard = document.querySelector('.card:has(#SponsorId)');
            if (sponsorCard) {
                sponsorCard.style.display = this.value == '1' ? 'block' : 'none'; // 1 = Client role
            }
        });
    </script>
}
