@model EllisHope.Areas.Admin.Models.UserEditViewModel
@{
    ViewData["Title"] = $"Edit {Model.FirstName} {Model.LastName}";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>
                    <i class="bi bi-pencil-square"></i> Edit User
                </h2>
                <p class="text-muted">@Model.FirstName @Model.LastName - @Model.Email</p>
            </div>
            <div class="btn-group">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                    <i class="bi bi-eye"></i> View Details
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-9">
        @if (Model.UserRole == EllisHope.Models.Domain.UserRole.BoardMember && string.IsNullOrEmpty(Model.ProfilePictureUrl))
        {
            <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                <div>
                    <strong>Profile Photo Recommended</strong><br />
                    Board members appear on the public Team page. Please add a profile photo for the best presentation.
                </div>
            </div>
        }

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="JoinedDate" />
            <input type="hidden" asp-for="LastLoginDate" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Profile Photo -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-camera"></i> Profile Photo
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Current Photo Display -->
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                        {
                            <img id="currentPhoto" src="@Model.ProfilePictureUrl" alt="Current profile photo"
                                 class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;">
                            <div id="currentPhotoPlaceholder" class="rounded-circle bg-secondary align-items-center justify-content-center mx-auto d-none"
                                 style="width: 150px; height: 150px;">
                                <i class="bi bi-person text-white" style="font-size: 4rem;"></i>
                            </div>
                        }
                        else
                        {
                            <div id="currentPhotoPlaceholder" class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mx-auto"
                                 style="width: 150px; height: 150px;">
                                <i class="bi bi-person text-white" style="font-size: 4rem;"></i>
                            </div>
                            <img id="currentPhoto" src="" alt="Profile photo preview"
                                 class="rounded-circle img-thumbnail d-none" style="width: 150px; height: 150px; object-fit: cover;">
                        }
                        <p class="text-muted small mt-2 mb-0">Current Photo</p>
                    </div>

                    <!-- Hidden field for selected avatar -->
                    <input type="hidden" id="SelectedAvatarUrl" name="SelectedAvatarUrl" value="" />

                    <!-- Photo Selection Options -->
                    <ul class="nav nav-tabs" id="photoTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="upload-tab" data-bs-toggle="tab" data-bs-target="#upload-panel"
                                    type="button" role="tab" aria-controls="upload-panel" aria-selected="true">
                                <i class="bi bi-upload"></i> Upload Photo
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="avatar-tab" data-bs-toggle="tab" data-bs-target="#avatar-panel"
                                    type="button" role="tab" aria-controls="avatar-panel" aria-selected="false">
                                <i class="bi bi-people"></i> Choose Avatar
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content border border-top-0 rounded-bottom p-3" id="photoTabsContent">
                        <!-- Upload Tab -->
                        <div class="tab-pane fade show active" id="upload-panel" role="tabpanel" aria-labelledby="upload-tab">
                            <label asp-for="ProfilePhoto" class="form-label">Upload a New Photo</label>
                            <input asp-for="ProfilePhoto" type="file" class="form-control" accept="image/*" onchange="previewProfilePhoto(this)">
                            <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Accepted formats: JPG, PNG, GIF, WebP. Max size: 10MB. Square photos work best.
                            </small>
                        </div>

                        <!-- Avatar Selection Tab -->
                        <div class="tab-pane fade" id="avatar-panel" role="tabpanel" aria-labelledby="avatar-tab">
                            <p class="text-muted mb-3">Select a default avatar:</p>
                            <div class="avatar-grid">
                                @for (int i = 1; i <= 56; i++)
                                {
                                    var avatarPath = $"/assets/img/avatars/avatar-{i:D2}.png";
                                    var isSelected = Model.ProfilePictureUrl == avatarPath;
                                    <div class="avatar-option @(isSelected ? "selected" : "")"
                                         data-avatar-url="@avatarPath"
                                         onclick="selectAvatar(this, '@avatarPath')">
                                        <img src="@avatarPath" alt="Avatar @i" />
                                        @if (isSelected)
                                        {
                                            <div class="avatar-check"><i class="bi bi-check-circle-fill"></i></div>
                                        }
                                    </div>
                                }
                            </div>
                            <div id="selectedAvatarInfo" class="mt-3 alert alert-success" style="display: none;">
                                <i class="bi bi-check-circle"></i> Avatar selected! Click "Save Changes" to apply.
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <div class="mt-3">
                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="clearProfilePhoto()">
                                <i class="bi bi-trash"></i> Remove Current Photo
                            </button>
                        </div>
                    }
                </div>
            </div>

            <!-- Basic Information -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person"></i> Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" type="tel" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Account Settings -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-shield-lock"></i> Account Settings
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="UserRole" class="form-label"></label>
                            <select asp-for="UserRole" class="form-select" asp-items="Html.GetEnumSelectList<EllisHope.Models.Domain.UserRole>()"></select>
                            <span asp-validation-for="UserRole" class="text-danger"></span>
                            <small class="form-text text-muted">Changing role will update Identity roles</small>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<EllisHope.Models.Domain.MembershipStatus>()"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="form-check mt-4">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-geo-alt"></i> Contact Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="State" class="form-label"></label>
                            <input asp-for="State" class="form-control" maxlength="2" placeholder="CA" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="ZipCode" class="form-label"></label>
                            <input asp-for="ZipCode" class="form-control" maxlength="10" />
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="EmergencyContactName" class="form-label"></label>
                            <input asp-for="EmergencyContactName" class="form-control" />
                            <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EmergencyContactPhone" class="form-label"></label>
                            <input asp-for="EmergencyContactPhone" class="form-control" type="tel" />
                            <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sponsor Assignment (Client only) -->
            @if (Model.UserRole == EllisHope.Models.Domain.UserRole.Client)
            {
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-person-heart"></i> Sponsor Assignment
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="SponsorId" class="form-label"></label>
                            <select asp-for="SponsorId" class="form-select">
                                <option value="">-- No Sponsor --</option>
                                @foreach (var sponsor in Model.AvailableSponsors)
                                {
                                    <option value="@sponsor.Id">@sponsor.DisplayName</option>
                                }
                            </select>
                            <span asp-validation-for="SponsorId" class="text-danger"></span>
                            <small class="form-text text-muted">Assign a sponsor to this client (optional)</small>
                        </div>
                    </div>
                </div>
            }

            <!-- Sponsor Company Information (Sponsor only) -->
            @if (Model.UserRole == EllisHope.Models.Domain.UserRole.Sponsor)
            {
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-building"></i> Company Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CompanyName" class="form-label"></label>
                                <input asp-for="CompanyName" class="form-control" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CompanyLogo" class="form-label"></label>
                                @if (!string.IsNullOrEmpty(Model.CompanyLogoUrl))
                                {
                                    <div class="mb-2">
                                        <img src="@Model.CompanyLogoUrl" alt="Current logo" class="img-thumbnail" style="max-height: 80px;" />
                                        <span class="text-muted small ms-2">Current logo</span>
                                    </div>
                                }
                                <input asp-for="CompanyLogo" class="form-control" type="file" accept="image/*" />
                                <span asp-validation-for="CompanyLogo" class="text-danger"></span>
                                <small class="form-text text-muted">Upload a new logo (400x200px recommended)</small>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="SponsorQuote" class="form-label"></label>
                                <textarea asp-for="SponsorQuote" class="form-control" rows="3"
                                          placeholder="Testimonial quote..."></textarea>
                                <span asp-validation-for="SponsorQuote" class="text-danger"></span>
                                @if (Model.SponsorQuoteApproved)
                                {
                                    <span class="badge bg-success mt-1">Approved</span>
                                }
                                else if (!string.IsNullOrEmpty(Model.SponsorQuote))
                                {
                                    <span class="badge bg-warning text-dark mt-1">Pending Approval</span>
                                }
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="SponsorRating" class="form-label"></label>
                                <select asp-for="SponsorRating" class="form-select">
                                    <option value="">-- No Rating --</option>
                                    <option value="1">1 Star</option>
                                    <option value="2">2 Stars</option>
                                    <option value="3">3 Stars</option>
                                    <option value="4">4 Stars</option>
                                    <option value="5">5 Stars</option>
                                </select>
                                <span asp-validation-for="SponsorRating" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="ShowInSponsorSection" class="form-check-input" type="checkbox" />
                                <label asp-for="ShowInSponsorSection" class="form-check-label"></label>
                            </div>
                            <small class="form-text text-muted">Display company on the public About page sponsor showcase</small>
                        </div>
                    </div>
                </div>
            }

            <!-- Membership Information -->
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-credit-card"></i> Membership Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="MonthlyFee" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="MonthlyFee" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="MonthlyFee" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="MembershipStartDate" class="form-label"></label>
                            <input asp-for="MembershipStartDate" class="form-control" type="date" />
                            <span asp-validation-for="MembershipStartDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="MembershipEndDate" class="form-label"></label>
                            <input asp-for="MembershipEndDate" class="form-control" type="date" />
                            <span asp-validation-for="MembershipEndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Admin Notes -->
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-sticky"></i> Admin Notes
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="AdminNotes" class="form-label"></label>
                        <textarea asp-for="AdminNotes" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="AdminNotes" class="text-danger"></span>
                        <small class="form-text text-muted">Internal notes, not visible to the user</small>
                    </div>
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="d-flex gap-2 mb-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>

    <!-- Account Info Sidebar -->
    <div class="col-lg-3">
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle"></i> Account Info
                </h6>
            </div>
            <div class="card-body">
                <dl class="mb-0">
                    <dt>Joined</dt>
                    <dd>@Model.JoinedDate.ToString("MMM dd, yyyy")</dd>

                    <dt>Last Login</dt>
                    <dd>
                        @if (Model.LastLoginDate.HasValue)
                        {
                            @Model.LastLoginDate.Value.ToString("MMM dd, yyyy")
                        }
                        else
                        {
                            <span class="text-muted">Never</span>
                        }
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <dt>Profile Picture</dt>
                        <dd>
                            <img src="@Model.ProfilePictureUrl" alt="Profile" class="img-thumbnail" style="max-width: 150px;" />
                        </dd>
                    }
                </dl>
            </div>
        </div>

        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Important
                </h6>
            </div>
            <div class="card-body">
                <ul class="small mb-0">
                    <li>Changing the role will update ASP.NET Identity roles</li>
                    <li>Email cannot be changed if user has logged in</li>
                    <li>Deactivating will prevent user from logging in</li>
                    <li>To reset password, use separate function</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(60px, 1fr));
            gap: 10px;
            max-height: 300px;
            overflow-y: auto;
            padding: 5px;
        }
        .avatar-option {
            cursor: pointer;
            border-radius: 50%;
            border: 3px solid transparent;
            overflow: hidden;
            position: relative;
            transition: all 0.2s ease;
        }
        .avatar-option:hover {
            border-color: #0d6efd;
            transform: scale(1.1);
        }
        .avatar-option.selected {
            border-color: #198754;
            box-shadow: 0 0 10px rgba(25, 135, 84, 0.5);
        }
        .avatar-option img {
            width: 100%;
            height: auto;
            display: block;
        }
        .avatar-check {
            position: absolute;
            bottom: 0;
            right: 0;
            background: #198754;
            color: white;
            border-radius: 50%;
            padding: 2px;
            font-size: 14px;
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Show/hide sponsor dropdown based on role
        document.getElementById('UserRole').addEventListener('change', function() {
            var sponsorCard = document.querySelector('.card:has(#SponsorId)');
            if (sponsorCard) {
                sponsorCard.style.display = this.value == '1' ? 'block' : 'none'; // 1 = Client role
            }
        });

        // Preview uploaded profile photo
        function previewProfilePhoto(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var currentPhoto = document.getElementById('currentPhoto');
                    var placeholder = document.getElementById('currentPhotoPlaceholder');

                    currentPhoto.src = e.target.result;
                    currentPhoto.classList.remove('d-none');
                    if (placeholder) {
                        placeholder.classList.add('d-none');
                        placeholder.classList.remove('d-flex');
                    }

                    // Clear any avatar selection when uploading
                    clearAvatarSelection();
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Select an avatar from the grid
        function selectAvatar(element, avatarUrl) {
            // Clear previous selection
            document.querySelectorAll('.avatar-option').forEach(function(opt) {
                opt.classList.remove('selected');
                var check = opt.querySelector('.avatar-check');
                if (check) check.remove();
            });

            // Mark new selection
            element.classList.add('selected');
            var checkHtml = '<div class="avatar-check"><i class="bi bi-check-circle-fill"></i></div>';
            element.insertAdjacentHTML('beforeend', checkHtml);

            // Update hidden field
            document.getElementById('SelectedAvatarUrl').value = avatarUrl;

            // Update preview
            var currentPhoto = document.getElementById('currentPhoto');
            var placeholder = document.getElementById('currentPhotoPlaceholder');

            currentPhoto.src = avatarUrl;
            currentPhoto.classList.remove('d-none');
            if (placeholder) {
                placeholder.classList.add('d-none');
                placeholder.classList.remove('d-flex');
            }

            // Show confirmation message
            document.getElementById('selectedAvatarInfo').style.display = 'block';

            // Clear file input
            var fileInput = document.getElementById('ProfilePhoto');
            if (fileInput) fileInput.value = '';
        }

        // Clear avatar selection
        function clearAvatarSelection() {
            document.querySelectorAll('.avatar-option').forEach(function(opt) {
                opt.classList.remove('selected');
                var check = opt.querySelector('.avatar-check');
                if (check) check.remove();
            });
            document.getElementById('SelectedAvatarUrl').value = '';
            document.getElementById('selectedAvatarInfo').style.display = 'none';
        }

        // Clear/remove current profile photo
        function clearProfilePhoto() {
            var currentPhoto = document.getElementById('currentPhoto');
            var placeholder = document.getElementById('currentPhotoPlaceholder');

            // Hide photo, show placeholder
            currentPhoto.classList.add('d-none');
            currentPhoto.src = '';
            if (placeholder) {
                placeholder.classList.remove('d-none');
                placeholder.classList.add('d-flex');
            }

            // Set hidden field to sentinel value for removal
            document.getElementById('SelectedAvatarUrl').value = '__REMOVE__';

            // Clear file input
            var fileInput = document.getElementById('ProfilePhoto');
            if (fileInput) fileInput.value = '';

            // Clear avatar selection
            document.querySelectorAll('.avatar-option').forEach(function(opt) {
                opt.classList.remove('selected');
                var check = opt.querySelector('.avatar-check');
                if (check) check.remove();
            });
            document.getElementById('selectedAvatarInfo').style.display = 'none';
        }
    </script>
}
