@model EllisHope.Areas.Admin.Models.UserListViewModel
@{
    ViewData["Title"] = "User Management";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>
                    <i class="bi bi-people"></i> User Management
                </h2>
                <p class="text-muted">Manage all users and their roles</p>
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Create New User
            </a>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">Total Users</h6>
                        <h2 class="mb-0">@Model.TotalUsers</h2>
                    </div>
                    <i class="bi bi-people fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">Active Users</h6>
                        <h2 class="mb-0">@Model.ActiveUsers</h2>
                    </div>
                    <i class="bi bi-check-circle fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">Pending</h6>
                        <h2 class="mb-0">@Model.PendingUsers</h2>
                    </div>
                    <i class="bi bi-hourglass-split fs-1"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters and Search -->
<div class="card mb-4">
    <div class="card-header bg-light">
        <h5 class="mb-0">
            <i class="bi bi-funnel"></i> Filters & Search
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Search</label>
                <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Name, email, or phone..." />
            </div>
            <div class="col-md-2">
                <label class="form-label">Role</label>
                <select name="roleFilter" class="form-select">
                    <option value="">All Roles</option>
                    @foreach (var role in Enum.GetValues<EllisHope.Models.Domain.UserRole>())
                    {
                        <option value="@((int)role)" selected="@(Model.RoleFilter == role)">@role</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Status</label>
                <select name="statusFilter" class="form-select">
                    <option value="">All Statuses</option>
                    @foreach (var status in Enum.GetValues<EllisHope.Models.Domain.MembershipStatus>())
                    {
                        <option value="@((int)status)" selected="@(Model.StatusFilter == status)">@status</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Active</label>
                <select name="activeFilter" class="form-select">
                    <option value="">All</option>
                    <option value="true" selected="@(Model.ActiveFilter == true)">Active Only</option>
                    <option value="false" selected="@(Model.ActiveFilter == false)">Inactive Only</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-fill">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-header bg-light">
        <h5 class="mb-0">
            <i class="bi bi-table"></i> Users (@Model.Users.Count())
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Users.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Sponsor</th>
                            <th>Clients</th>
                            <th>Responsibilities</th>
                            <th>Joined</th>
                            <th>Last Login</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr class="@(!user.IsActive ? "table-secondary" : "")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                                        {
                                            <img src="@user.ProfilePictureUrl" alt="@user.FullName" class="avatar-img me-2" />
                                        }
                                        else
                                        {
                                            <div class="avatar-circle me-2">
                                                @(string.IsNullOrWhiteSpace(user.FullName) ? "?" : user.FullName.Substring(0, 1).ToUpper())
                                            </div>
                                        }
                                        <div>
                                            <strong>@(string.IsNullOrWhiteSpace(user.FullName) ? user.Email : user.FullName)</strong>
                                            @if (!user.IsActive)
                                            {
                                                <span class="badge bg-secondary ms-1">Inactive</span>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <small>@user.Email</small>
                                    @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                    {
                                        <br /><small class="text-muted">@user.PhoneNumber</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@GetRoleBadgeColor(user.UserRole)">
                                        @user.UserRole
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-@GetStatusBadgeColor(user.Status)">
                                        @user.Status
                                    </span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.SponsorName))
                                    {
                                        <small><i class="bi bi-person-heart"></i> @user.SponsorName</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">—</small>
                                    }
                                </td>
                                <td>
                                    @if (user.SponsoredClientsCount > 0)
                                    {
                                        <span class="badge bg-info">@user.SponsoredClientsCount</span>
                                    }
                                    else
                                    {
                                        <small class="text-muted">—</small>
                                    }
                                </td>
                                <td>
                                    @if (user.ResponsibilitiesCount > 0)
                                    {
                                        <span class="badge bg-success" title="@user.ResponsibilitiesCount assigned responsibilities">
                                            <i class="bi bi-shield-check"></i> @user.ResponsibilitiesCount
                                        </span>
                                    }
                                    else
                                    {
                                        <small class="text-muted">—</small>
                                    }
                                </td>
                                <td>
                                    <small>@user.JoinedDate.ToString("MM/dd/yyyy")</small>
                                </td>
                                <td>
                                    @if (user.LastLoginDate.HasValue)
                                    {
                                        <small>@user.LastLoginDate.Value.ToString("MM/dd/yyyy")</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Never</small>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Responsibilities" asp-route-id="@user.Id" class="btn btn-outline-success" title="Manage Responsibilities">
                                            <i class="bi bi-shield-check"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No users found matching the current filters.
            </div>
        }
    </div>
</div>

@functions {
    private string GetRoleBadgeColor(EllisHope.Models.Domain.UserRole role)
    {
        return role switch
        {
            EllisHope.Models.Domain.UserRole.Admin => "danger",
            EllisHope.Models.Domain.UserRole.BoardMember => "primary",
            EllisHope.Models.Domain.UserRole.Sponsor => "success",
            EllisHope.Models.Domain.UserRole.Client => "info",
            EllisHope.Models.Domain.UserRole.Member => "secondary",
            _ => "secondary"
        };
    }

    private string GetStatusBadgeColor(EllisHope.Models.Domain.MembershipStatus status)
    {
        return status switch
        {
            EllisHope.Models.Domain.MembershipStatus.Active => "success",
            EllisHope.Models.Domain.MembershipStatus.Pending => "warning",
            EllisHope.Models.Domain.MembershipStatus.Inactive => "secondary",
            EllisHope.Models.Domain.MembershipStatus.Expired => "danger",
            EllisHope.Models.Domain.MembershipStatus.Cancelled => "dark",
            _ => "secondary"
        };
    }
}

@section Styles {
    <style>
        .avatar-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #0d6efd;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .avatar-img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #e0e0e0;
        }
    </style>
}
