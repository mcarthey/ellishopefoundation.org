@model IEnumerable<EllisHope.Areas.Admin.Models.PendingSponsorQuoteViewModel>
@{
    ViewData["Title"] = "Pending Sponsor Quotes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-quote text-primary"></i> Pending Sponsor Quotes</h2>
        <p class="text-muted mb-0">Review and approve sponsor testimonials for the About page</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Users
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        No pending sponsor quotes to review. All quotes have been processed!
    </div>
}
else
{
    <div class="card">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="bi bi-hourglass-split"></i> @Model.Count() Quote(s) Awaiting Review
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 60px;">Logo</th>
                            <th>Sponsor</th>
                            <th>Quote</th>
                            <th style="width: 100px;">Rating</th>
                            <th style="width: 120px;">Submitted</th>
                            <th style="width: 180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var quote in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(quote.CompanyLogoUrl))
                                    {
                                        <img src="@quote.CompanyLogoUrl" alt="Logo" class="rounded" style="width: 50px; height: 50px; object-fit: contain;" />
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="bi bi-building"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <strong>@quote.SponsorName</strong>
                                    @if (!string.IsNullOrEmpty(quote.CompanyName))
                                    {
                                        <br /><small class="text-muted">@quote.CompanyName</small>
                                    }
                                    <br /><small class="text-muted"><i class="bi bi-envelope"></i> @quote.Email</small>
                                </td>
                                <td>
                                    <p class="mb-0" style="max-width: 400px;">
                                        "@quote.Quote"
                                    </p>
                                </td>
                                <td style="white-space: nowrap;">
                                    @if (quote.Rating.HasValue)
                                    {
                                        <span class="text-warning">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= quote.Rating.Value)
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star"></i>
                                                }
                                            }
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No rating</span>
                                    }
                                </td>
                                <td>
                                    @if (quote.SubmittedDate.HasValue)
                                    {
                                        <small>@quote.SubmittedDate.Value.ToString("MMM dd, yyyy")</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Unknown</small>
                                    }
                                </td>
                                <td>
                                    <form asp-action="ApproveQuote" method="post" class="d-inline">
                                        <input type="hidden" name="userId" value="@quote.UserId" />
                                        <button type="submit" class="btn btn-sm btn-success" title="Approve">
                                            <i class="bi bi-check-lg"></i> Approve
                                        </button>
                                    </form>
                                    <a asp-action="RejectQuote" asp-route-id="@quote.UserId" class="btn btn-sm btn-outline-danger" title="Reject">
                                        <i class="bi bi-x-lg"></i> Reject
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<div class="mt-4">
    <div class="alert alert-secondary">
        <h6 class="alert-heading"><i class="bi bi-info-circle"></i> About Sponsor Quotes</h6>
        <ul class="mb-0">
            <li>Approved quotes will appear in the testimonial section on the About page</li>
            <li>Sponsors can see the approval status in their dashboard</li>
            <li>If you reject a quote, please provide helpful feedback so the sponsor can improve it</li>
            <li>Sponsors will be able to edit and resubmit rejected quotes</li>
        </ul>
    </div>
</div>
