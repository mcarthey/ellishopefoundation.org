@model EllisHope.Areas.Admin.Models.EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>
                    <i class="bi bi-pencil-square"></i> Edit Profile
                </h2>
                <p class="text-muted">Update your account information</p>
            </div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Profile
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Profile Photo -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-camera"></i> Profile Photo
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Current Photo Display -->
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.CurrentProfilePictureUrl))
                        {
                            <img id="currentPhoto" src="@Model.CurrentProfilePictureUrl" alt="Current profile photo"
                                 class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;">
                        }
                        else
                        {
                            <div id="currentPhotoPlaceholder" class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mx-auto"
                                 style="width: 150px; height: 150px;">
                                <i class="bi bi-person text-white" style="font-size: 4rem;"></i>
                            </div>
                            <img id="currentPhoto" src="" alt="Current profile photo"
                                 class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover; display: none;">
                        }
                        <p class="text-muted small mt-2 mb-0">Current Photo</p>
                    </div>

                    <!-- Hidden field for selected avatar -->
                    <input type="hidden" id="SelectedAvatarUrl" name="SelectedAvatarUrl" value="" />

                    <!-- Photo Selection Options -->
                    <ul class="nav nav-tabs" id="photoTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="upload-tab" data-bs-toggle="tab" data-bs-target="#upload-panel"
                                    type="button" role="tab" aria-controls="upload-panel" aria-selected="true">
                                <i class="bi bi-upload"></i> Upload Photo
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="avatar-tab" data-bs-toggle="tab" data-bs-target="#avatar-panel"
                                    type="button" role="tab" aria-controls="avatar-panel" aria-selected="false">
                                <i class="bi bi-people"></i> Choose Avatar
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content border border-top-0 rounded-bottom p-3" id="photoTabsContent">
                        <!-- Upload Tab -->
                        <div class="tab-pane fade show active" id="upload-panel" role="tabpanel" aria-labelledby="upload-tab">
                            <label asp-for="ProfilePhoto" class="form-label">Upload Your Own Photo</label>
                            <input asp-for="ProfilePhoto" type="file" class="form-control" accept="image/*" onchange="previewProfilePhoto(this)">
                            <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Accepted formats: JPG, PNG, GIF, WebP. Max size: 10MB. Square photos work best.
                            </small>
                            <!-- Preview container -->
                            <div id="photoPreviewContainer" class="mt-3" style="display: none;">
                                <p class="text-muted small mb-2">New Photo Preview:</p>
                                <img id="photoPreview" src="" alt="Preview" class="rounded-circle img-thumbnail"
                                     style="width: 100px; height: 100px; object-fit: cover;">
                            </div>
                        </div>

                        <!-- Avatar Selection Tab -->
                        <div class="tab-pane fade" id="avatar-panel" role="tabpanel" aria-labelledby="avatar-tab">
                            <p class="text-muted mb-3">Select a default avatar that represents you:</p>
                            <div class="avatar-grid">
                                @for (int i = 1; i <= 56; i++)
                                {
                                    var avatarPath = $"/assets/img/avatars/avatar-{i:D2}.png";
                                    var isSelected = Model.CurrentProfilePictureUrl == avatarPath;
                                    <div class="avatar-option @(isSelected ? "selected" : "")"
                                         data-avatar-url="@avatarPath"
                                         onclick="selectAvatar(this, '@avatarPath')">
                                        <img src="@avatarPath" alt="Avatar @i" />
                                        @if (isSelected)
                                        {
                                            <div class="avatar-check"><i class="bi bi-check-circle-fill"></i></div>
                                        }
                                    </div>
                                }
                            </div>
                            <div id="selectedAvatarInfo" class="mt-3 alert alert-success" style="display: none;">
                                <i class="bi bi-check-circle"></i> Avatar selected! Click "Save Changes" to apply.
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.CurrentProfilePictureUrl))
                    {
                        <div class="mt-3">
                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="clearProfilePhoto()">
                                <i class="bi bi-trash"></i> Remove Current Photo
                            </button>
                        </div>
                    }
                </div>
            </div>

            <style>
                .avatar-grid {
                    display: grid;
                    grid-template-columns: repeat(auto-fill, minmax(70px, 1fr));
                    gap: 10px;
                    max-height: 400px;
                    overflow-y: auto;
                    padding: 5px;
                }
                .avatar-option {
                    position: relative;
                    cursor: pointer;
                    border: 3px solid transparent;
                    border-radius: 50%;
                    padding: 2px;
                    transition: all 0.2s ease;
                }
                .avatar-option:hover {
                    border-color: #6c757d;
                    transform: scale(1.05);
                }
                .avatar-option.selected {
                    border-color: #198754;
                    box-shadow: 0 0 10px rgba(25, 135, 84, 0.5);
                }
                .avatar-option img {
                    width: 100%;
                    height: auto;
                    border-radius: 50%;
                    display: block;
                }
                .avatar-option .avatar-check {
                    position: absolute;
                    bottom: 0;
                    right: 0;
                    background: #198754;
                    color: white;
                    border-radius: 50%;
                    width: 24px;
                    height: 24px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 14px;
                }
            </style>

            <!-- Basic Information -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person"></i> Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Changing your email will also update your login username
                            </small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" type="tel" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-geo-alt"></i> Contact Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="State" class="form-label"></label>
                            <input asp-for="State" class="form-control" maxlength="2" placeholder="CA" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="ZipCode" class="form-label"></label>
                            <input asp-for="ZipCode" class="form-control" maxlength="10" />
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Emergency Contact -->
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-telephone"></i> Emergency Contact
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="EmergencyContactName" class="form-label"></label>
                            <input asp-for="EmergencyContactName" class="form-control" />
                            <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EmergencyContactPhone" class="form-label"></label>
                            <input asp-for="EmergencyContactPhone" class="form-control" type="tel" />
                            <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="d-flex gap-2 mb-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>

    <!-- Help Sidebar -->
    <div class="col-lg-4">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle"></i> Profile Tips
                </h6>
            </div>
            <div class="card-body">
                <h6>What You Can Edit:</h6>
                <ul class="small">
                    <li>Profile photo (displayed on public pages)</li>
                    <li>Personal information (name, phone, birth date)</li>
                    <li>Contact information (address, city, state)</li>
                    <li>Emergency contact details</li>
                    <li>Email address (also updates login)</li>
                </ul>

                <h6 class="mt-3">What You Cannot Edit:</h6>
                <ul class="small">
                    <li>Your role (admin only)</li>
                    <li>Account status (admin only)</li>
                    <li>Membership dates (admin only)</li>
                    <li>Financial information (admin only)</li>
                </ul>

                <h6 class="mt-3">Security:</h6>
                <ul class="small mb-0">
                    <li>To change your password, use the <a asp-action="ChangePassword">Change Password</a> page</li>
                    <li>Keep your email up to date for account recovery</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewProfilePhoto(input) {
            const preview = document.getElementById('photoPreview');
            const previewContainer = document.getElementById('photoPreviewContainer');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                    previewContainer.style.display = 'block';

                    // Update current photo preview
                    updateCurrentPhotoPreview(e.target.result);

                    // Clear any selected avatar since user is uploading
                    clearAvatarSelection();
                }

                reader.readAsDataURL(input.files[0]);
            } else {
                preview.src = '';
                previewContainer.style.display = 'none';
            }
        }

        function selectAvatar(element, avatarUrl) {
            // Clear file input since user is selecting an avatar
            const fileInput = document.getElementById('ProfilePhoto');
            if (fileInput) {
                fileInput.value = '';
                document.getElementById('photoPreviewContainer').style.display = 'none';
            }

            // Remove selected class from all avatars
            document.querySelectorAll('.avatar-option').forEach(opt => {
                opt.classList.remove('selected');
                const check = opt.querySelector('.avatar-check');
                if (check) check.remove();
            });

            // Add selected class to clicked avatar
            element.classList.add('selected');

            // Add checkmark
            const checkDiv = document.createElement('div');
            checkDiv.className = 'avatar-check';
            checkDiv.innerHTML = '<i class="bi bi-check-circle-fill"></i>';
            element.appendChild(checkDiv);

            // Set hidden field value
            document.getElementById('SelectedAvatarUrl').value = avatarUrl;

            // Update current photo preview
            updateCurrentPhotoPreview(avatarUrl);

            // Show confirmation
            document.getElementById('selectedAvatarInfo').style.display = 'block';
        }

        function clearAvatarSelection() {
            document.querySelectorAll('.avatar-option').forEach(opt => {
                opt.classList.remove('selected');
                const check = opt.querySelector('.avatar-check');
                if (check) check.remove();
            });
            document.getElementById('SelectedAvatarUrl').value = '';
            document.getElementById('selectedAvatarInfo').style.display = 'none';
        }

        function updateCurrentPhotoPreview(src) {
            const currentPhoto = document.getElementById('currentPhoto');
            const placeholder = document.getElementById('currentPhotoPlaceholder');

            if (currentPhoto) {
                currentPhoto.src = src;
                currentPhoto.style.display = 'block';
            }
            if (placeholder) {
                placeholder.style.display = 'none';
            }
        }

        function clearProfilePhoto() {
            if (confirm('Are you sure you want to remove your profile photo?')) {
                // Clear file input
                const fileInput = document.getElementById('ProfilePhoto');
                if (fileInput) fileInput.value = '';

                // Clear avatar selection
                clearAvatarSelection();

                // Set a special value to indicate removal
                document.getElementById('SelectedAvatarUrl').value = '__REMOVE__';

                // Reset current photo display
                const currentPhoto = document.getElementById('currentPhoto');
                const placeholder = document.getElementById('currentPhotoPlaceholder');

                if (currentPhoto) {
                    currentPhoto.style.display = 'none';
                    currentPhoto.src = '';
                }
                if (placeholder) {
                    placeholder.style.display = 'flex';
                }

                // Hide preview
                document.getElementById('photoPreviewContainer').style.display = 'none';

                alert('Profile photo will be removed when you save changes.');
            }
        }
    </script>
}
