@model EllisHope.Areas.Admin.Models.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>
                    <i class="bi bi-person-circle"></i> My Profile
                </h2>
                <p class="text-muted">View and manage your account information</p>
            </div>
            <a asp-action="Edit" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit Profile
            </a>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <!-- Main Profile Info -->
    <div class="col-lg-8">
        <!-- Basic Information -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-person"></i> Basic Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Full Name:</dt>
                            <dd class="col-sm-7">@Model.FullName</dd>

                            <dt class="col-sm-5">Email:</dt>
                            <dd class="col-sm-7"><a href="mailto:@Model.Email">@Model.Email</a></dd>

                            <dt class="col-sm-5">Phone:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>

                            <dt class="col-sm-5">Date of Birth:</dt>
                            <dd class="col-sm-7">
                                @if (Model.DateOfBirth.HasValue)
                                {
                                    <span>@Model.DateOfBirth.Value.ToString("MMMM dd, yyyy")</span>
                                    @if (Model.Age.HasValue)
                                    {
                                        <span class="text-muted">(@Model.Age years old)</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Role:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-@GetRoleBadgeColor(Model.UserRole)">@Model.UserRole</span>
                            </dd>

                            <dt class="col-sm-5">Status:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-@GetStatusBadgeColor(Model.Status)">@Model.Status</span>
                            </dd>

                            <dt class="col-sm-5">Member Since:</dt>
                            <dd class="col-sm-7">@Model.JoinedDate.ToString("MMMM dd, yyyy")</dd>

                            <dt class="col-sm-5">Last Login:</dt>
                            <dd class="col-sm-7">
                                @if (Model.LastLoginDate.HasValue)
                                {
                                    @Model.LastLoginDate.Value.ToString("MMMM dd, yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="bi bi-geo-alt"></i> Contact Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Address:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.Address))
                                {
                                    @Model.Address
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>

                            <dt class="col-sm-5">City:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.City))
                                {
                                    @Model.City
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>

                            <dt class="col-sm-5">State:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.State))
                                {
                                    @Model.State
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>

                            <dt class="col-sm-5">Zip Code:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.ZipCode))
                                {
                                    @Model.ZipCode
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-6">Emergency Contact:</dt>
                            <dd class="col-sm-6">
                                @if (!string.IsNullOrEmpty(Model.EmergencyContactName))
                                {
                                    <strong>@Model.EmergencyContactName</strong>
                                    @if (!string.IsNullOrEmpty(Model.EmergencyContactPhone))
                                    {
                                        <br /><a href="tel:@Model.EmergencyContactPhone">@Model.EmergencyContactPhone</a>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-lightning"></i> Quick Actions
                </h6>
            </div>
            <div class="list-group list-group-flush">
                <a asp-action="Edit" class="list-group-item list-group-item-action">
                    <i class="bi bi-pencil"></i> Edit Profile
                </a>
                <a asp-action="ChangePassword" class="list-group-item list-group-item-action">
                    <i class="bi bi-key"></i> Change Password
                </a>
                <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                    <button type="submit" class="list-group-item list-group-item-action border-0 text-start w-100">
                        <i class="bi bi-box-arrow-right"></i> Sign Out
                    </button>
                </form>
            </div>
        </div>

        <!-- Account Info -->
        <div class="card">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle"></i> Account Information
                </h6>
            </div>
            <div class="card-body">
                <h6>Your Roles:</h6>
                @if (Model.Roles.Any())
                {
                    <div class="mb-3">
                        @foreach (var role in Model.Roles)
                        {
                            <span class="badge bg-secondary me-1">@role</span>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-3">No specific roles assigned</p>
                }

                <h6>Account Stats:</h6>
                <ul class="small mb-0">
                    <li>Member for @((DateTime.UtcNow - Model.JoinedDate).Days) days</li>
                    @if (Model.LastLoginDate.HasValue)
                    {
                        <li>Last login: @Model.LastLoginDate.Value.ToString("MMM dd, yyyy")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetRoleBadgeColor(EllisHope.Models.Domain.UserRole role)
    {
        return role switch
        {
            EllisHope.Models.Domain.UserRole.Admin => "danger",
            EllisHope.Models.Domain.UserRole.BoardMember => "primary",
            EllisHope.Models.Domain.UserRole.Sponsor => "success",
            EllisHope.Models.Domain.UserRole.Client => "info",
            EllisHope.Models.Domain.UserRole.Member => "secondary",
            _ => "secondary"
        };
    }

    private string GetStatusBadgeColor(EllisHope.Models.Domain.MembershipStatus status)
    {
        return status switch
        {
            EllisHope.Models.Domain.MembershipStatus.Active => "success",
            EllisHope.Models.Domain.MembershipStatus.Pending => "warning",
            EllisHope.Models.Domain.MembershipStatus.Inactive => "secondary",
            EllisHope.Models.Domain.MembershipStatus.Expired => "danger",
            EllisHope.Models.Domain.MembershipStatus.Cancelled => "dark",
            _ => "secondary"
        };
    }
}
