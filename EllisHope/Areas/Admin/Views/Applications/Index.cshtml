@model EllisHope.Areas.Admin.Models.ApplicationListViewModel

@{
    ViewData["Title"] = "Applications";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="bi bi-file-earmark-text"></i> Client Applications</h2>
                <a asp-action="DownloadBlankForm" class="btn btn-outline-secondary">
                    <i class="bi bi-printer"></i> Download Blank Form
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Applications</h5>
                    <h2 class="mb-0">@Model.TotalApplications</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Pending Review</h5>
                    <h2 class="mb-0">@Model.PendingReview</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Under Review</h5>
                    <h2 class="mb-0">@Model.UnderReview</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">Needing My Vote</h5>
                    <h2 class="mb-0">@Model.NeedingMyVote</h2>
                    @if (Model.NeedingMyVote > 0)
                    {
                        <a asp-action="NeedingReview" class="btn btn-light btn-sm mt-2">
                            <i class="bi bi-arrow-right"></i> Review Now
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Status Filter</label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">All Statuses</option>
                        <option value="Draft" selected="@(Model.StatusFilter == EllisHope.Models.Domain.ApplicationStatus.Draft)">Draft</option>
                        <option value="Submitted" selected="@(Model.StatusFilter == EllisHope.Models.Domain.ApplicationStatus.Submitted)">Submitted</option>
                        <option value="UnderReview" selected="@(Model.StatusFilter == EllisHope.Models.Domain.ApplicationStatus.UnderReview)">Under Review</option>
                        <option value="InDiscussion" selected="@(Model.StatusFilter == EllisHope.Models.Domain.ApplicationStatus.InDiscussion)">In Discussion</option>
                        <option value="NeedsInformation" selected="@(Model.StatusFilter == EllisHope.Models.Domain.ApplicationStatus.NeedsInformation)">Needs Information</option>
                        <option value="Approved" selected="@(Model.StatusFilter == EllisHope.Models.Domain.ApplicationStatus.Approved)">Approved</option>
                        <option value="Rejected" selected="@(Model.StatusFilter == EllisHope.Models.Domain.ApplicationStatus.Rejected)">Rejected</option>
                        <option value="Active" selected="@(Model.StatusFilter == EllisHope.Models.Domain.ApplicationStatus.Active)">Active</option>
                        <option value="Completed" selected="@(Model.StatusFilter == EllisHope.Models.Domain.ApplicationStatus.Completed)">Completed</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Search</label>
                    <input type="text" name="searchTerm" class="form-control" placeholder="Search by name or email..." value="@Model.SearchTerm" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Applications Table -->
    <div class="card">
        <div class="card-body">
            @if (!Model.Applications.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h4 class="mt-3">No Applications Found</h4>
                    <p class="text-muted">Try adjusting your filters or check back later.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Applicant</th>
                                <th>Status</th>
                                <th>Submitted</th>
                                <th>Funding Types</th>
                                <th>Est. Cost</th>
                                <th>Voting</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var app in Model.Applications)
                            {
                                <tr class="@(app.HasUserVoted ? "" : "table-warning")">
                                    <td><strong>#@app.Id</strong></td>
                                    <td>
                                        <div>@app.ApplicantName</div>
                                        <small class="text-muted">@app.ApplicantEmail</small>
                                    </td>
                                    <td>
                                        <span class="badge @app.StatusBadgeClass">
                                            @app.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (app.SubmittedDate.HasValue)
                                        {
                                            <div>@app.SubmittedDate.Value.ToString("MMM dd, yyyy")</div>
                                            @if (app.DaysSinceSubmission.HasValue)
                                            {
                                                <small class="text-muted">@app.DaysSinceSubmission days ago</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not submitted</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@app.FundingTypes</small>
                                    </td>
                                    <td>
                                        @if (app.EstimatedMonthlyCost.HasValue)
                                        {
                                            <text>$@app.EstimatedMonthlyCost.Value.ToString("N2")</text>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="progress flex-grow-1" style="height: 20px;">
                                                <div class="progress-bar bg-success" role="progressbar" 
                                                     style="width: @((app.ApprovalVotes / (double)app.VotesRequired * 100))%">
                                                    @app.ApprovalVotes
                                                </div>
                                                <div class="progress-bar bg-danger" role="progressbar" 
                                                     style="width: @((app.RejectionVotes / (double)app.VotesRequired * 100))%">
                                                    @app.RejectionVotes
                                                </div>
                                            </div>
                                            <small class="ms-2">@app.TotalVotes/@app.VotesRequired</small>
                                        </div>
                                        @if (!app.HasUserVoted && (app.Status == EllisHope.Models.Domain.ApplicationStatus.UnderReview || app.Status == EllisHope.Models.Domain.ApplicationStatus.InDiscussion))
                                        {
                                            <small class="text-danger"><i class="bi bi-exclamation-circle"></i> Vote needed</small>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@app.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            @if (!app.HasUserVoted && (app.Status == EllisHope.Models.Domain.ApplicationStatus.UnderReview || app.Status == EllisHope.Models.Domain.ApplicationStatus.InDiscussion))
                                            {
                                                <a asp-action="Review" asp-route-id="@app.Id" class="btn btn-sm btn-warning">
                                                    <i class="bi bi-hand-thumbs-up"></i> Vote
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 30 seconds to show new applications
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
}
