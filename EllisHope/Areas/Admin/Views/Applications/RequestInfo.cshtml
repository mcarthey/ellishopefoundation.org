@model EllisHope.Areas.Admin.Models.RequestInformationViewModel

@{
    ViewData["Title"] = "Request More Information";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Applications</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.ApplicationId">Application #@Model.ApplicationId</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Request Information</li>
                </ol>
            </nav>
            <h2><i class="bi bi-question-circle"></i> Request More Information</h2>
            <p class="text-muted">Send a request to the applicant for additional details.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">Request Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="RequestInfo" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="ApplicationId" />

                        <div class="mb-3">
                            <label asp-for="RequestDetails" class="form-label">Please specify what information is needed from the applicant. This will be sent to them in a notification and added as a public comment on their application.</label>
                            <textarea asp-for="RequestDetails" class="form-control" rows="6" placeholder="e.g., 'Please provide more details about your financial need.' or 'Can you clarify your fitness goals?'"></textarea>
                            <span asp-validation-for="RequestDetails" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Details" asp-route-id="@Model.ApplicationId" class="btn btn-secondary me-2">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Send Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
