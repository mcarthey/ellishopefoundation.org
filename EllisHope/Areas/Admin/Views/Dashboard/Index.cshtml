@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i>
            <strong>Welcome back, @ViewData["UserName"]!</strong> You have successfully logged into the admin portal.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Blog Posts</h6>
                        <h2 class="mb-0">0</h2>
                    </div>
                    <div class="fs-1 text-muted">
                        <i class="bi bi-newspaper"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Events</h6>
                        <h2 class="mb-0">0</h2>
                    </div>
                    <div class="fs-1 text-muted">
                        <i class="bi bi-calendar-event"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Media Files</h6>
                        <h2 class="mb-0">0</h2>
                    </div>
                    <div class="fs-1 text-muted">
                        <i class="bi bi-image"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Pages</h6>
                        <h2 class="mb-0">0</h2>
                    </div>
                    <div class="fs-1 text-muted">
                        <i class="bi bi-file-earmark-text"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a href="#" class="btn btn-outline-primary w-100 p-3">
                            <i class="bi bi-plus-circle fs-4 d-block mb-2"></i>
                            Create Blog Post
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a href="#" class="btn btn-outline-primary w-100 p-3">
                            <i class="bi bi-calendar-plus fs-4 d-block mb-2"></i>
                            Add Event
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a href="#" class="btn btn-outline-primary w-100 p-3">
                            <i class="bi bi-upload fs-4 d-block mb-2"></i>
                            Upload Media
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a href="#" class="btn btn-outline-primary w-100 p-3">
                            <i class="bi bi-pencil-square fs-4 d-block mb-2"></i>
                            Edit Page Content
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">System Info</h5>
            </div>
            <div class="card-body">
                <p class="mb-2">
                    <strong>Version:</strong> 1.0.0
                </p>
                <p class="mb-2">
                    <strong>Environment:</strong> @(System.Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") ?? "Production")
                </p>
                <p class="mb-2">
                    <strong>Logged in as:</strong> @User.Identity?.Name
                </p>
                <p class="mb-0">
                    <strong>Login time:</strong> @DateTime.Now.ToString("MMM dd, yyyy h:mm tt")
                </p>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-white">
                <h5 class="mb-0">Next Steps</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success"></i> Setup complete!
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-circle text-muted"></i> Add first blog post
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-circle text-muted"></i> Upload media files
                    </li>
                    <li class="mb-0">
                        <i class="bi bi-circle text-muted"></i> Create first event
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
