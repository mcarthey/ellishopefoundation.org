@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i>
            <strong>Welcome back, @ViewData["UserName"]!</strong> You have successfully logged into the admin portal.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <a asp-area="Admin" asp-controller="Blog" asp-action="Index" class="text-decoration-none">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Blog Posts</h6>
                            <h2 class="mb-0">@ViewData["BlogCount"]</h2>
                        </div>
                        <div class="fs-1 text-muted">
                            <i class="bi bi-newspaper"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-3 mb-3">
        <a asp-area="Admin" asp-controller="Events" asp-action="Index" class="text-decoration-none">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Events</h6>
                            <h2 class="mb-0">@ViewData["EventCount"]</h2>
                        </div>
                        <div class="fs-1 text-muted">
                            <i class="bi bi-calendar-event"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-3 mb-3">
        <a asp-area="Admin" asp-controller="Causes" asp-action="Index" class="text-decoration-none">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Causes</h6>
                            <h2 class="mb-0">@ViewData["CauseCount"]</h2>
                        </div>
                        <div class="fs-1 text-muted">
                            <i class="bi bi-heart"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-3 mb-3">
        <a asp-area="Admin" asp-controller="Media" asp-action="Index" class="text-decoration-none">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Media Files</h6>
                            <h2 class="mb-0">@ViewData["MediaCount"]</h2>
                        </div>
                        <div class="fs-1 text-muted">
                            <i class="bi bi-image"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a asp-area="Admin" asp-controller="Blog" asp-action="Create" class="btn btn-outline-primary w-100 p-3">
                            <i class="bi bi-plus-circle fs-4 d-block mb-2"></i>
                            Create Blog Post
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a asp-area="Admin" asp-controller="Events" asp-action="Create" class="btn btn-outline-primary w-100 p-3">
                            <i class="bi bi-calendar-plus fs-4 d-block mb-2"></i>
                            Add Event
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a asp-area="Admin" asp-controller="Causes" asp-action="Create" class="btn btn-outline-primary w-100 p-3">
                            <i class="bi bi-heart-fill fs-4 d-block mb-2"></i>
                            Create Cause
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a asp-area="Admin" asp-controller="Media" asp-action="Upload" class="btn btn-outline-primary w-100 p-3">
                            <i class="bi bi-upload fs-4 d-block mb-2"></i>
                            Upload Media
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a asp-area="Admin" asp-controller="Pages" asp-action="Index" class="btn btn-outline-primary w-100 p-3">
                            <i class="bi bi-pencil-square fs-4 d-block mb-2"></i>
                            Edit Pages
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a asp-area="Admin" asp-controller="Media" asp-action="UnsplashSearch" class="btn btn-outline-primary w-100 p-3">
                            <i class="bi bi-images fs-4 d-block mb-2"></i>
                            Browse Unsplash
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header bg-white">
                <h5 class="mb-0">System Info</h5>
            </div>
            <div class="card-body">
                <p class="mb-2">
                    <strong>Total Pages:</strong> @ViewData["PageCount"]
                </p>
                <p class="mb-2">
                    <strong>Environment:</strong> @(System.Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") ?? "Production")
                </p>
                <p class="mb-2">
                    <strong>Logged in as:</strong> @User.Identity?.Name
                </p>
                <p class="mb-0">
                    <strong>Login time:</strong> @DateTime.Now.ToString("MMM dd, yyyy h:mm tt")
                </p>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">Media Management</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-area="Admin" asp-controller="Media" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-image"></i> Media Library
                    </a>
                    <a asp-area="Admin" asp-controller="MediaMigration" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-right"></i> Migration Tool
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
