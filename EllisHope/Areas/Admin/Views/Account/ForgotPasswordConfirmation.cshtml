@{
    ViewData["Title"] = "Check Your Email";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ellis Hope Foundation</title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/fonts/bootstrap-icons.css" />
    <style>
        body {
            background: linear-gradient(135deg, #000 0%, #c53040 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
            overflow: hidden;
            max-width: 450px;
            width: 100%;
        }

        .card-header {
            background: #28a745;
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .card-body {
            padding: 2rem;
        }

        .btn-primary {
            background: #c53040;
            color: white;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-primary:hover {
            background: #000;
            color: white;
            transform: translateY(-2px);
        }

        .info-box {
            background-color: #e7f3ff;
            border: 1px solid #b6d4fe;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="card-header">
            <h2 class="mb-2">
                <i class="bi bi-envelope-check"></i>
            </h2>
            <h4>Check Your Email</h4>
        </div>

        <div class="card-body text-center">
            <div class="info-box text-start">
                <p class="mb-2"><strong>We've sent you a password reset link.</strong></p>
                <p class="mb-0 small text-muted">
                    If an account exists with that email address, you'll receive an email with instructions to reset your password.
                </p>
            </div>

            <p class="text-muted small mb-4">
                <i class="bi bi-info-circle"></i>
                The link will expire in 24 hours. Check your spam folder if you don't see it.
            </p>

            <a asp-action="Login" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> Back to Sign In
            </a>
        </div>
    </div>

    <script src="~/assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
</body>
</html>
