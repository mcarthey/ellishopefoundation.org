@{
    ViewData["Title"] = "Password Reset Complete";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ellis Hope Foundation</title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/fonts/bootstrap-icons.css" />
    <style>
        body {
            background: linear-gradient(135deg, #000 0%, #c53040 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
            overflow: hidden;
            max-width: 450px;
            width: 100%;
        }

        .card-header {
            background: #28a745;
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .card-body {
            padding: 2rem;
        }

        .btn-primary {
            background: #c53040;
            color: white;
            padding: 0.75rem 2rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-primary:hover {
            background: #000;
            color: white;
            transform: translateY(-2px);
        }

        .success-box {
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="card-header">
            <h2 class="mb-2">
                <i class="bi bi-check-circle"></i>
            </h2>
            <h4>Password Reset Complete!</h4>
        </div>

        <div class="card-body text-center">
            <div class="success-box">
                <p class="mb-0">
                    <i class="bi bi-shield-check text-success"></i>
                    <strong>Your password has been successfully reset.</strong>
                </p>
            </div>

            <p class="text-muted mb-4">
                You can now sign in with your new password.
            </p>

            <a asp-action="Login" class="btn btn-primary">
                <i class="bi bi-box-arrow-in-right"></i> Sign In Now
            </a>
        </div>
    </div>

    <script src="~/assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
</body>
</html>
