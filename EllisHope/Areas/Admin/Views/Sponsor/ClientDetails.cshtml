@model ClientDetailsViewModel
@{
    ViewData["Title"] = $"Client Details - {Model.FullName}";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>
                    <i class="bi bi-person-badge"></i> Client Details
                </h2>
                <p class="text-muted">@Model.FullName</p>
            </div>
            <a asp-action="Dashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>

<div class="row">
    <!-- Main Information -->
    <div class="col-lg-8">
        <!-- Basic Information -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-person"></i> Basic Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Full Name:</dt>
                            <dd class="col-sm-7">@Model.FullName</dd>

                            <dt class="col-sm-5">Email:</dt>
                            <dd class="col-sm-7"><a href="mailto:@Model.Email">@Model.Email</a></dd>

                            <dt class="col-sm-5">Phone:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>

                            <dt class="col-sm-5">Date of Birth:</dt>
                            <dd class="col-sm-7">
                                @if (Model.DateOfBirth.HasValue)
                                {
                                    <span>@Model.DateOfBirth.Value.ToString("MMMM dd, yyyy")</span>
                                    @if (Model.Age.HasValue)
                                    {
                                        <span class="text-muted">(@Model.Age years old)</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Status:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-@GetStatusBadgeColor(Model.Status)">@Model.Status</span>
                            </dd>

                            <dt class="col-sm-5">Joined Date:</dt>
                            <dd class="col-sm-7">@Model.JoinedDate.ToString("MMMM dd, yyyy")</dd>

                            <dt class="col-sm-5">Last Login:</dt>
                            <dd class="col-sm-7">
                                @if (Model.LastLoginDate.HasValue)
                                {
                                    @Model.LastLoginDate.Value.ToString("MMMM dd, yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </dd>

                            <dt class="col-sm-5">Monthly Fee:</dt>
                            <dd class="col-sm-7"><strong>$@Model.MonthlyFee.ToString("N2")</strong></dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="bi bi-geo-alt"></i> Contact Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Address:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.Address))
                                {
                                    @Model.Address
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>

                            <dt class="col-sm-5">City:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.City))
                                {
                                    @Model.City
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>

                            <dt class="col-sm-5">State:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.State))
                                {
                                    @Model.State
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>

                            <dt class="col-sm-5">Zip Code:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.ZipCode))
                                {
                                    @Model.ZipCode
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-6">Emergency Contact:</dt>
                            <dd class="col-sm-6">
                                @if (!string.IsNullOrEmpty(Model.EmergencyContactName))
                                {
                                    <strong>@Model.EmergencyContactName</strong>
                                    @if (!string.IsNullOrEmpty(Model.EmergencyContactPhone))
                                    {
                                        <br /><a href="tel:@Model.EmergencyContactPhone">@Model.EmergencyContactPhone</a>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Membership Information -->
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-credit-card"></i> Membership Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <dl>
                            <dt>Monthly Fee:</dt>
                            <dd><strong class="text-primary">$@Model.MonthlyFee.ToString("N2")</strong></dd>
                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl>
                            <dt>Start Date:</dt>
                            <dd>
                                @if (Model.MembershipStartDate.HasValue)
                                {
                                    @Model.MembershipStartDate.Value.ToString("MMM dd, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Not set</span>
                                }
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-4">
                        <dl>
                            <dt>End Date:</dt>
                            <dd>
                                @if (Model.MembershipEndDate.HasValue)
                                {
                                    @Model.MembershipEndDate.Value.ToString("MMM dd, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Not set</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-lightning"></i> Quick Actions
                </h6>
            </div>
            <div class="list-group list-group-flush">
                <a href="mailto:@Model.Email" class="list-group-item list-group-item-action">
                    <i class="bi bi-envelope"></i> Send Email
                </a>
                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                {
                    <a href="tel:@Model.PhoneNumber" class="list-group-item list-group-item-action">
                        <i class="bi bi-telephone"></i> Call Client
                    </a>
                }
            </div>
        </div>

        <!-- Activity Summary -->
        <div class="card">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-activity"></i> Activity Summary
                </h6>
            </div>
            <div class="card-body">
                <dl class="mb-0">
                    <dt>Member Since:</dt>
                    <dd>@((DateTime.UtcNow - Model.JoinedDate).Days) days</dd>

                    <dt>Last Login:</dt>
                    <dd>
                        @if (Model.LastLoginDate.HasValue)
                        {
                            var daysSinceLogin = (DateTime.UtcNow - Model.LastLoginDate.Value).Days;
                            if (daysSinceLogin == 0)
                            {
                                <span class="text-success">Today</span>
                            }
                            else
                            {
                                @daysSinceLogin <span>days ago</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Never</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeColor(EllisHope.Models.Domain.MembershipStatus status)
    {
        return status switch
        {
            EllisHope.Models.Domain.MembershipStatus.Active => "success",
            EllisHope.Models.Domain.MembershipStatus.Pending => "warning",
            EllisHope.Models.Domain.MembershipStatus.Inactive => "secondary",
            EllisHope.Models.Domain.MembershipStatus.Expired => "danger",
            EllisHope.Models.Domain.MembershipStatus.Cancelled => "dark",
            _ => "secondary"
        };
    }
}
