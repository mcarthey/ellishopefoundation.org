@model SponsorDashboardViewModel
@{
    ViewData["Title"] = "Sponsor Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>
            <i class="bi bi-heart-fill text-danger"></i> Sponsor Dashboard
        </h2>
        <p class="text-muted">Welcome back, @Model.SponsorName</p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">Total Clients</h6>
                        <h2 class="mb-0">@Model.TotalClients</h2>
                    </div>
                    <i class="bi bi-people fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">Active Clients</h6>
                        <h2 class="mb-0">@Model.ActiveClients</h2>
                    </div>
                    <i class="bi bi-check-circle fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">Pending</h6>
                        <h2 class="mb-0">@Model.PendingClients</h2>
                    </div>
                    <i class="bi bi-hourglass-split fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">Monthly Commitment</h6>
                        <h2 class="mb-0">$@Model.TotalMonthlyCommitment.ToString("N2")</h2>
                    </div>
                    <i class="bi bi-cash-coin fs-1"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sponsored Clients -->
<div class="card">
    <div class="card-header bg-light">
        <h5 class="mb-0">
            <i class="bi bi-people"></i> Your Sponsored Clients (@Model.SponsoredClients.Count)
        </h5>
    </div>
    <div class="card-body">
        @if (Model.SponsoredClients.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Contact</th>
                            <th>Status</th>
                            <th>Joined</th>
                            <th>Monthly Fee</th>
                            <th>Last Login</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var client in Model.SponsoredClients)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-2">
                                            @(string.IsNullOrWhiteSpace(client.FullName) ? "?" : client.FullName.Substring(0, 1).ToUpper())
                                        </div>
                                        <div>
                                            <strong>@client.FullName</strong>
                                            @if (client.Age.HasValue)
                                            {
                                                <br /><small class="text-muted">Age: @client.Age</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <small>
                                        <i class="bi bi-envelope"></i> @client.Email<br />
                                        @if (!string.IsNullOrEmpty(client.PhoneNumber))
                                        {
                                            <i class="bi bi-phone"></i>
                                            @client.PhoneNumber
                                        }
                                    </small>
                                </td>
                                <td>
                                    <span class="badge bg-@GetStatusBadgeColor(client.Status)">
                                        @client.Status
                                    </span>
                                </td>
                                <td>
                                    <small>@client.JoinedDate.ToString("MM/dd/yyyy")</small>
                                </td>
                                <td>
                                    <strong>$@client.MonthlyFee.ToString("N2")</strong>
                                </td>
                                <td>
                                    @if (client.LastLoginDate.HasValue)
                                    {
                                        <small>@client.LastLoginDate.Value.ToString("MM/dd/yyyy")</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Never</small>
                                    }
                                </td>
                                <td>
                                    <a asp-action="ClientDetails" asp-route-id="@client.Id" 
                                       class="btn btn-sm btn-outline-primary" title="View Details">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> You don't have any sponsored clients yet.
                <p class="mb-0 mt-2">
                    <small>Contact the foundation administrator to set up client sponsorships.</small>
                </p>
            </div>
        }
    </div>
</div>

<!-- Quick Links -->
<div class="row mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-building fs-1 text-primary"></i>
                <h5 class="mt-3">Company Profile</h5>
                <p class="text-muted">Manage your company showcase on our About page</p>
                <a asp-action="MyCompanyProfile" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit Company Profile
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-person-circle fs-1 text-success"></i>
                <h5 class="mt-3">My Profile</h5>
                <p class="text-muted">View and update your personal information</p>
                <a asp-action="MyProfile" class="btn btn-success">
                    <i class="bi bi-arrow-right"></i> Go to Profile
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-chat-dots fs-1 text-info"></i>
                <h5 class="mt-3">Contact Support</h5>
                <p class="text-muted">Get help or ask questions</p>
                <a href="mailto:support@ellishope.org" class="btn btn-info">
                    <i class="bi bi-envelope"></i> Email Support
                </a>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeColor(EllisHope.Models.Domain.MembershipStatus status)
    {
        return status switch
        {
            EllisHope.Models.Domain.MembershipStatus.Active => "success",
            EllisHope.Models.Domain.MembershipStatus.Pending => "warning",
            EllisHope.Models.Domain.MembershipStatus.Inactive => "secondary",
            EllisHope.Models.Domain.MembershipStatus.Expired => "danger",
            EllisHope.Models.Domain.MembershipStatus.Cancelled => "dark",
            _ => "secondary"
        };
    }
}

@section Styles {
    <style>
        .avatar-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #0d6efd;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.2rem;
        }
    </style>
}
