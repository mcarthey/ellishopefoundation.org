@model EllisHope.Models.Domain.Testimonial
@{
    ViewData["Title"] = "Delete Testimonial";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Delete Testimonial</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="alert alert-danger">
    <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this testimonial? This action cannot be undone.
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <blockquote class="blockquote">
                    <p class="mb-0">"@Model.Quote"</p>
                    <footer class="blockquote-footer mt-2">
                        @Model.AuthorName
                        @if (!string.IsNullOrEmpty(Model.AuthorRole))
                        {
                            <cite title="Role">, @Model.AuthorRole</cite>
                        }
                    </footer>
                </blockquote>

                <div class="mt-4">
                    <div class="row">
                        <div class="col-md-4">
                            <strong>Status:</strong>
                            @if (Model.RequiresApproval)
                            {
                                <span class="badge bg-warning text-dark">Pending Approval</span>
                            }
                            else if (Model.IsPublished)
                            {
                                <span class="badge bg-success">Published</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Draft</span>
                            }
                        </div>
                        <div class="col-md-4">
                            <strong>Featured:</strong>
                            @if (Model.IsFeatured)
                            {
                                <span class="badge bg-info">Yes</span>
                            }
                            else
                            {
                                <span class="text-muted">No</span>
                            }
                        </div>
                        <div class="col-md-4">
                            <strong>Display Order:</strong> @Model.DisplayOrder
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                @if (Model.AuthorPhoto != null)
                {
                    <div class="text-center">
                        <img src="@Model.AuthorPhoto.FilePath" alt="@Model.AuthorName"
                             class="img-thumbnail rounded-circle" style="width: 120px; height: 120px; object-fit: cover;">
                        <p class="text-muted small mt-2">Author photo</p>
                    </div>
                }
            </div>
        </div>

        <hr />

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
