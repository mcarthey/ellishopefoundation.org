@model EllisHope.Areas.Admin.Models.TestimonialEditViewModel
@{
    ViewData["Title"] = "Edit Testimonial";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Edit Testimonial</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

@if (Model.RequiresApproval)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i> This testimonial is pending approval.
        @if (User.IsInRole("Admin"))
        {
            <form asp-action="Approve" asp-route-id="@Model.Id" method="post" class="d-inline ms-3">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-success">
                    <i class="bi bi-check-lg"></i> Approve Now
                </button>
            </form>
        }
    </div>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-8">
                    <!-- Quote -->
                    <div class="mb-3">
                        <label asp-for="Quote" class="form-label"></label>
                        <textarea asp-for="Quote" class="form-control" rows="5" maxlength="1000"></textarea>
                        <span asp-validation-for="Quote" class="text-danger"></span>
                        <small class="form-text text-muted">Max 1000 characters</small>
                    </div>

                    <!-- Author Name -->
                    <div class="mb-3">
                        <label asp-for="AuthorName" class="form-label"></label>
                        <input asp-for="AuthorName" class="form-control" />
                        <span asp-validation-for="AuthorName" class="text-danger"></span>
                    </div>

                    <!-- Author Role -->
                    <div class="mb-3">
                        <label asp-for="AuthorRole" class="form-label"></label>
                        <input asp-for="AuthorRole" class="form-control" placeholder="e.g., Foundation Client, Community Member" />
                        <span asp-validation-for="AuthorRole" class="text-danger"></span>
                    </div>

                    <!-- Audit Info -->
                    <div class="card bg-light mt-4">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">Audit Information</h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <strong>Created:</strong> @Model.CreatedDate.ToString("MMM dd, yyyy h:mm tt")
                                        @if (!string.IsNullOrEmpty(Model.CreatedByName))
                                        {
                                            <text> by @Model.CreatedByName</text>
                                        }
                                    </small>
                                </div>
                                @if (Model.ApprovedDate.HasValue)
                                {
                                    <div class="col-md-6">
                                        <small class="text-muted">
                                            <strong>Approved:</strong> @Model.ApprovedDate.Value.ToString("MMM dd, yyyy h:mm tt")
                                            @if (!string.IsNullOrEmpty(Model.ApprovedByName))
                                            {
                                                <text> by @Model.ApprovedByName</text>
                                            }
                                        </small>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Author Photo -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <strong>Author Photo (Optional)</strong>
                        </div>
                        <div class="card-body">
                            @if (Model.CurrentPhoto != null)
                            {
                                <div class="mb-3 text-center">
                                    <img src="@Model.CurrentPhoto.FilePath" alt="Current photo"
                                         class="img-thumbnail rounded-circle" style="width: 100px; height: 100px; object-fit: cover;">
                                    <p class="text-muted small mt-1">Current photo</p>
                                </div>
                            }
                            @{
                                ViewData["FieldName"] = "AuthorPhotoId";
                                ViewData["FieldLabel"] = "Author Photo";
                                ViewData["AllowUpload"] = true;
                                ViewData["Category"] = "7"; // MediaCategory.Other
                                ViewData["UseMediaId"] = true;
                            }
                            <partial name="_MediaPickerById" model="Model.AuthorPhotoId" />
                        </div>
                    </div>

                    <!-- Status -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <strong>Status</strong>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input asp-for="IsPublished" class="form-check-input" type="checkbox" id="isPublished">
                                    <label asp-for="IsPublished" class="form-check-label" for="isPublished"></label>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input asp-for="IsFeatured" class="form-check-input" type="checkbox" id="isFeatured">
                                    <label asp-for="IsFeatured" class="form-check-label" for="isFeatured"></label>
                                </div>
                                <small class="form-text text-muted">Featured testimonials appear on the home page carousel</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DisplayOrder" class="form-label"></label>
                                <input asp-for="DisplayOrder" class="form-control" type="number" min="0" />
                                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                <small class="form-text text-muted">Lower numbers appear first</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="button" class="btn btn-danger float-end" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Testimonial</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this testimonial from "<strong>@Model.AuthorName</strong>"?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
