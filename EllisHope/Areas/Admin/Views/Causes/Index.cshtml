@model EllisHope.Areas.Admin.Models.CauseListViewModel
@{
    ViewData["Title"] = "Causes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Causes</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Cause
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Search and Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search causes...">
            </div>
            <div class="col-md-3">
                <select name="categoryFilter" class="form-select">
                    <option value="">All Categories</option>
                    <option value="Water" selected="@(Model.CategoryFilter == "Water")">Water</option>
                    <option value="Education" selected="@(Model.CategoryFilter == "Education")">Education</option>
                    <option value="Healthcare" selected="@(Model.CategoryFilter == "Healthcare")">Healthcare</option>
                    <option value="Children" selected="@(Model.CategoryFilter == "Children")">Children</option>
                    <option value="Other" selected="@(Model.CategoryFilter == "Other")">Other</option>
                </select>
            </div>
            <div class="col-md-2">
                <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" name="showUnpublished" value="true" @(Model.ShowUnpublished ? "checked" : "") id="showUnpublished">
                    <label class="form-check-label" for="showUnpublished">
                        Show Unpublished
                    </label>
                </div>
            </div>
            <div class="col-md-1">
                <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" name="showActiveOnly" value="true" @(Model.ShowActiveOnly ? "checked" : "") id="showActiveOnly">
                    <label class="form-check-label" for="showActiveOnly">
                        Active Only
                    </label>
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Causes Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Causes.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Cause</th>
                            <th>Category</th>
                            <th>Progress</th>
                            <th>Dates</th>
                            <th>Status</th>
                            <th style="width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cause in Model.Causes)
                        {
                            var isExpired = cause.EndDate.HasValue && cause.EndDate.Value < DateTime.Now;
                            var isFeatured = cause.IsFeatured;
                            <tr class="@(isExpired ? "table-secondary" : "") @(isFeatured ? "table-info" : "")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(cause.FeaturedImageUrl))
                                        {
                                            <img src="@cause.FeaturedImageUrl" alt="Featured" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px; border-radius: 4px;">
                                        }
                                        <div>
                                            <strong>@cause.Title</strong>
                                            @if (isFeatured)
                                            {
                                                <i class="bi bi-star-fill text-warning" title="Featured"></i>
                                            }
                                            <br><small class="text-muted">/@cause.Slug</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(cause.Category))
                                    {
                                        <span class="badge bg-secondary">@cause.Category</span>
                                    }
                                </td>
                                <td>
                                    <div class="mb-1">
                                        <small>@cause.RaisedAmount.ToString("C") / @cause.GoalAmount.ToString("C")</small>
                                    </div>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar @(cause.ProgressPercentage >= 100 ? "bg-success" : "bg-primary")" 
                                             role="progressbar" 
                                             style="width: @(Math.Min(cause.ProgressPercentage, 100))%" 
                                             aria-valuenow="@cause.ProgressPercentage" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            @cause.ProgressPercentage%
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (cause.StartDate.HasValue)
                                    {
                                        <div><small>Start: @cause.StartDate.Value.ToString("MMM dd, yyyy")</small></div>
                                    }
                                    @if (cause.EndDate.HasValue)
                                    {
                                        <div><small>End: @cause.EndDate.Value.ToString("MMM dd, yyyy")</small></div>
                                        @if (isExpired)
                                        {
                                            <span class="badge bg-secondary">Expired</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @if (cause.IsPublished)
                                    {
                                        <span class="badge bg-success">Published</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Draft</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@cause.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(cause.Id)">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>

                                    <!-- Delete Confirmation Modal -->
                                    <div class="modal fade" id="deleteModal@(cause.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Delete Cause</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete "<strong>@cause.Title</strong>"?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="Delete" asp-route-id="@cause.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-heart" style="font-size: 4rem; color: #ccc;"></i>
                <p class="text-muted mt-3">No causes found.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Create Your First Cause
                </a>
            </div>
        }
    </div>
</div>
