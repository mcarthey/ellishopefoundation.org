@model EllisHope.Areas.Admin.Models.CauseViewModel
@{
    ViewData["Title"] = "Edit Cause";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Edit Cause</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FeaturedImageUrl" />

            <div class="row">
                <div class="col-md-8">
                    <!-- Title -->
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" id="titleInput" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Slug -->
                    <div class="mb-3">
                        <label asp-for="Slug" class="form-label"></label>
                        <input asp-for="Slug" class="form-control" id="slugInput" />
                        <span asp-validation-for="Slug" class="text-danger"></span>
                        <small class="form-text text-muted">URL-friendly identifier</small>
                    </div>

                    <!-- Short Description -->
                    <div class="mb-3">
                        <label asp-for="ShortDescription" class="form-label"></label>
                        <textarea asp-for="ShortDescription" class="form-control" rows="2" maxlength="500"></textarea>
                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        <small class="form-text text-muted">Brief summary for cards and listings (max 500 characters)</small>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" id="descriptionEditor"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Donation URL -->
                    <div class="mb-3">
                        <label asp-for="DonationUrl" class="form-label"></label>
                        <input asp-for="DonationUrl" class="form-control" type="url" placeholder="https://..." />
                        <span asp-validation-for="DonationUrl" class="text-danger"></span>
                        <small class="form-text text-muted">External donation link (optional)</small>
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Fundraising Card -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <strong>Fundraising Goals</strong>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label asp-for="GoalAmount" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="GoalAmount" class="form-control" type="number" step="0.01" min="0" />
                                </div>
                                <span asp-validation-for="GoalAmount" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="RaisedAmount" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="RaisedAmount" class="form-control" type="number" step="0.01" min="0" />
                                </div>
                                <span asp-validation-for="RaisedAmount" class="text-danger"></span>
                            </div>

                            @if (Model.GoalAmount > 0)
                            {
                                var progress = (int)((Model.RaisedAmount / Model.GoalAmount) * 100);
                                <div class="mb-2">
                                    <small class="text-muted">Current Progress:</small>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar @(progress >= 100 ? "bg-success" : "bg-primary")" 
                                             role="progressbar" 
                                             style="width: @(Math.Min(progress, 100))%" 
                                             aria-valuenow="@progress" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            @progress%
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Category & Dates -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <strong>Category & Dates</strong>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label asp-for="Category" class="form-label"></label>
                                <select asp-for="Category" class="form-select">
                                    <option value="">Select Category</option>
                                    <option value="Water">Water</option>
                                    <option value="Education">Education</option>
                                    <option value="Healthcare">Healthcare</option>
                                    <option value="Children">Children</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label asp-for="StartDate" class="form-label"></label>
                                <input asp-for="StartDate" class="form-control" type="date" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="EndDate" class="form-label"></label>
                                <input asp-for="EndDate" class="form-control" type="date" />
                                <small class="form-text text-muted">Leave blank for ongoing causes</small>
                            </div>
                        </div>
                    </div>

                    <!-- Status -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <strong>Status</strong>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input asp-for="IsPublished" class="form-check-input" type="checkbox" id="isPublished">
                                    <label asp-for="IsPublished" class="form-check-label" for="isPublished"></label>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input asp-for="IsFeatured" class="form-check-input" type="checkbox" id="isFeatured">
                                    <label asp-for="IsFeatured" class="form-check-label" for="isFeatured"></label>
                                </div>
                                <small class="form-text text-muted">Featured causes appear prominently on the site</small>
                            </div>
                        </div>
                    </div>

                    <!-- Featured Image -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <strong>Featured Image</strong>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.FeaturedImageUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.FeaturedImageUrl" alt="Current Image" class="img-fluid" style="max-height: 200px;" />
                                    <p class="text-muted mt-2"><small>Current Image</small></p>
                                </div>
                            }
                            <div class="mb-3">
                                <label class="form-label">Upload New Image</label>
                                <input asp-for="FeaturedImageFile" class="form-control" type="file" accept="image/*" id="featuredImage" />
                                <span asp-validation-for="FeaturedImageFile" class="text-danger"></span>
                                <small class="form-text text-muted">Leave blank to keep current image</small>
                            </div>
                            <div id="imagePreview" class="mt-2" style="display:none;">
                                <p class="text-muted"><small>New Image Preview:</small></p>
                                <img id="previewImg" src="#" alt="Preview" class="img-fluid" style="max-height: 200px;" />
                            </div>
                        </div>
                    </div>

                    <!-- Tags -->
                    <div class="card mb-3">
                        <div class="card-header">
                            <strong>Tags</strong>
                        </div>
                        <div class="card-body">
                            <input asp-for="Tags" class="form-control" placeholder="e.g., urgent, community, recurring" />
                            <small class="form-text text-muted">Separate tags with commas</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- TinyMCE -->
    <script src="https://cdn.tiny.cloud/1/@(ViewData["TinyMceApiKey"] ?? "no-api-key")/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        // Initialize TinyMCE
        tinymce.init({
            selector: '#descriptionEditor',
            height: 400,
            plugins: 'anchor autolink charmap codesample emoticons link lists searchreplace table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontsize | bold italic underline | link table | align lineheight | numlist bullist | removeformat',
            menubar: false,
            content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; font-size: 14px; }'
        });

        // Image preview
        document.getElementById('featuredImage').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('previewImg').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}
