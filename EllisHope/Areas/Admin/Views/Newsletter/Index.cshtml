@model EllisHope.Areas.Admin.Models.NewsletterIndexViewModel
@{
    ViewData["Title"] = "Newsletter Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-1 opacity-75">Active Subscribers</h6>
                        <h2 class="card-title mb-0">@Model.ActiveCount</h2>
                    </div>
                    <i class="bi bi-people fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-secondary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-1 opacity-75">Unsubscribed</h6>
                        <h2 class="card-title mb-0">@Model.UnsubscribedCount</h2>
                    </div>
                    <i class="bi bi-person-x fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-1 opacity-75">Newsletters Sent</h6>
                        <h2 class="card-title mb-0">@Model.RecentNewsletters.Count</h2>
                    </div>
                    <i class="bi bi-envelope-check fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-1 opacity-75">Drafts</h6>
                        <h2 class="card-title mb-0">@Model.DraftNewsletters.Count</h2>
                    </div>
                    <i class="bi bi-file-earmark-text fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Actions -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <a asp-action="Compose" class="btn btn-primary">
            <i class="bi bi-pencil-square me-1"></i> Compose Newsletter
        </a>
        <a asp-action="History" class="btn btn-outline-secondary ms-2">
            <i class="bi bi-clock-history me-1"></i> View History
        </a>
    </div>
    <div>
        <a asp-action="Export" class="btn btn-outline-success">
            <i class="bi bi-download me-1"></i> Export CSV
        </a>
    </div>
</div>

<!-- Draft Newsletters -->
@if (Model.DraftNewsletters.Any())
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Draft Newsletters</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Subject</th>
                            <th>Created</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var draft in Model.DraftNewsletters)
                        {
                            <tr>
                                <td>@draft.Subject</td>
                                <td>@draft.CreatedAt.ToString("MMM d, yyyy h:mm tt")</td>
                                <td>
                                    <a asp-action="Compose" asp-route-id="@draft.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form asp-action="DeleteDraft" method="post" class="d-inline"
                                          onsubmit="return confirm('Delete this draft?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@draft.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Subscribers List -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-people me-2"></i>Subscribers</h5>
        <span class="badge bg-primary">@Model.TotalCount total</span>
    </div>
    <div class="card-body">
        @if (!Model.Subscribers.Any())
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-2">No subscribers yet. Share your newsletter signup on your website!</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Source</th>
                            <th>Subscribed</th>
                            <th>Status</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th style="width: 80px;">Actions</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subscriber in Model.Subscribers)
                        {
                            <tr class="@(!subscriber.IsActive ? "table-secondary" : "")">
                                <td>
                                    <a href="mailto:@subscriber.Email">@subscriber.Email</a>
                                </td>
                                <td>@(subscriber.Name ?? "-")</td>
                                <td>@(subscriber.Source ?? "-")</td>
                                <td>@subscriber.SubscribedAt.ToString("MMM d, yyyy")</td>
                                <td>
                                    @if (subscriber.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Unsubscribed</span>
                                        <small class="text-muted d-block">@subscriber.UnsubscribedAt?.ToString("MMM d, yyyy")</small>
                                    }
                                </td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        <form asp-action="DeleteSubscriber" method="post"
                                              onsubmit="return confirm('Permanently delete this subscriber?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@subscriber.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
