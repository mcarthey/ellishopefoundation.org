@model EllisHope.Areas.Admin.Models.NewsletterHistoryViewModel
@{
    ViewData["Title"] = "Newsletter History";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Newsletter
        </a>
    </div>
    <div>
        <a asp-action="Compose" class="btn btn-primary">
            <i class="bi bi-pencil-square me-1"></i> Compose New
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Sent Newsletters</h5>
    </div>
    <div class="card-body">
        @if (!Model.SentNewsletters.Any())
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-envelope fs-1"></i>
                <p class="mt-2">No newsletters have been sent yet.</p>
                <a asp-action="Compose" class="btn btn-primary mt-2">
                    <i class="bi bi-pencil-square me-1"></i> Compose Your First Newsletter
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Subject</th>
                            <th>Sent</th>
                            <th>Recipients</th>
                            <th>Sent By</th>
                            <th style="width: 100px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var newsletter in Model.SentNewsletters)
                        {
                            <tr>
                                <td>
                                    <strong>@newsletter.Subject</strong>
                                </td>
                                <td>
                                    @newsletter.SentAt?.ToString("MMM d, yyyy h:mm tt")
                                </td>
                                <td>
                                    <span class="badge bg-success">@newsletter.RecipientCount</span>
                                </td>
                                <td>
                                    @(newsletter.SentBy?.Email ?? "Unknown")
                                </td>
                                <td>
                                    <a asp-action="View" asp-route-id="@newsletter.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
