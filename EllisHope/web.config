<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- 
      HTTPS Redirect Rule
      Enabled after SSL certificate is installed
      This forces all HTTP traffic to redirect to HTTPS
    -->
    <rewrite>
      <rules>
        <rule name="Redirect to HTTPS" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="^OFF$" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- ASP.NET Core Module Configuration -->
    <handlers>
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
    </handlers>
    
    <aspNetCore processPath="dotnet" 
                arguments=".\EllisHope.dll" 
                stdoutLogEnabled="false" 
                stdoutLogFile=".\logs\stdout" 
                hostingModel="OutOfProcess">
      <environmentVariables>
        <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="Production" />
      </environmentVariables>
    </aspNetCore>
    
    <!-- Security Headers -->
    <httpProtocol>
      <customHeaders>
        <!-- Remove server header for security -->
        <remove name="X-Powered-By" />
        
        <!-- Prevent clickjacking -->
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        
        <!-- Prevent MIME sniffing -->
        <add name="X-Content-Type-Options" value="nosniff" />
        
        <!-- XSS Protection -->
        <add name="X-XSS-Protection" value="1; mode=block" />
        
        <!-- 
          Content Security Policy
          Helps prevent XSS and other injection attacks
        -->
        <add name="Content-Security-Policy" value="default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.tiny.cloud https://unpkg.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; frame-src 'self' https://www.youtube.com;" />
        
        <!-- 
          Strict-Transport-Security (HSTS)
          Forces browsers to use HTTPS for future visits
        -->
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Error Pages -->
    <httpErrors errorMode="Detailed" />
    
    <!-- Compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    
  </system.webServer>
</configuration>
