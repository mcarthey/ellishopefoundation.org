@model EllisHope.Models.ViewModels.MediaUploadViewModel
@{
    ViewData["Title"] = "Upload Image";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Upload Image</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Media Library
    </a>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <form asp-action="Upload" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label asp-for="File" class="form-label">Select Image</label>
                        <input asp-for="File"
                               type="file"
                               class="form-control"
                               accept="image/*"
                               onchange="previewImage(this)">
                        <span asp-validation-for="File" class="text-danger"></span>
                        <div class="form-text">Accepted formats: JPG, PNG, GIF, WebP. Max size: 10MB</div>
                    </div>

                    <!-- Image Preview -->
                    <div id="imagePreview" class="mb-4 text-center" style="display: none;">
                        <img id="preview" src="" alt="Preview" class="img-fluid" style="max-height: 400px; border: 1px solid #dee2e6; border-radius: 4px;">
                    </div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Optional image title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AltText" class="form-label">Alt Text</label>
                        <input asp-for="AltText" class="form-control" placeholder="Describe the image for accessibility">
                        <span asp-validation-for="AltText" class="text-danger"></span>
                        <div class="form-text">Used for accessibility and SEO. If left empty, filename will be used.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Caption" class="form-label">Caption</label>
                        <textarea asp-for="Caption" class="form-control" rows="2" placeholder="Optional caption"></textarea>
                        <span asp-validation-for="Caption" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label">Category</label>
                        <select asp-for="Category" class="form-select">
                            @foreach (var category in Enum.GetValues<EllisHope.Models.Domain.MediaCategory>())
                            {
                                <option value="@((int)category)">@category</option>
                            }
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Tags" class="form-label">Tags</label>
                        <input asp-for="Tags" class="form-control" placeholder="e.g., events, children, fundraising">
                        <span asp-validation-for="Tags" class="text-danger"></span>
                        <div class="form-text">Separate multiple tags with commas</div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-upload"></i> Upload Image
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(input) {
            const preview = document.getElementById('preview');
            const previewContainer = document.getElementById('imagePreview');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                    previewContainer.style.display = 'block';
                }

                reader.readAsDataURL(input.files[0]);
            } else {
                preview.src = '';
                previewContainer.style.display = 'none';
            }
        }
    </script>
}
