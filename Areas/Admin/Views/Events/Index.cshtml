@model EllisHope.Areas.Admin.Models.EventListViewModel
@{
    ViewData["Title"] = "Events";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Events</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Event
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Search and Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-6">
                <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search events...">
            </div>
            <div class="col-md-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="showUnpublished" value="true" @(Model.ShowUnpublished ? "checked" : "") id="showUnpublished">
                    <label class="form-check-label" for="showUnpublished">
                        Show Unpublished
                    </label>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="showUpcomingOnly" value="true" @(Model.ShowUpcomingOnly ? "checked" : "") id="showUpcomingOnly">
                    <label class="form-check-label" for="showUpcomingOnly">
                        Upcoming Only
                    </label>
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Events Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Events.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Event</th>
                            <th>Date & Time</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th style="width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ev in Model.Events)
                        {
                            var isPast = ev.EventDate < DateTime.Now;
                            <tr class="@(isPast ? "table-secondary" : "")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(ev.FeaturedImageUrl))
                                        {
                                            <img src="@ev.FeaturedImageUrl" alt="Featured" style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px; border-radius: 4px;">
                                        }
                                        <div>
                                            <strong>@ev.Title</strong>
                                            <br><small class="text-muted">/@ev.Slug</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>@ev.EventDate.ToString("MMM dd, yyyy")</div>
                                    @if (ev.StartTime.HasValue && ev.EndTime.HasValue)
                                    {
                                        <small class="text-muted">@ev.StartTime.Value.ToString(@"hh\:mm") - @ev.EndTime.Value.ToString(@"hh\:mm")</small>
                                    }
                                    @if (isPast)
                                    {
                                        <br><span class="badge bg-secondary">Past Event</span>
                                    }
                                </td>
                                <td>
                                    <small>@ev.Location</small>
                                </td>
                                <td>
                                    @if (ev.IsPublished)
                                    {
                                        <span class="badge bg-success">Published</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Draft</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@ev.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(ev.Id)">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>

                                    <!-- Delete Confirmation Modal -->
                                    <div class="modal fade" id="deleteModal@(ev.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Delete Event</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete "<strong>@ev.Title</strong>"?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="Delete" asp-route-id="@ev.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-event" style="font-size: 4rem; color: #ccc;"></i>
                <p class="text-muted mt-3">No events found.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Create Your First Event
                </a>
            </div>
        }
    </div>
</div>
