@model IEnumerable<EllisHope.Models.Domain.Event>
@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var searchTerm = ViewBag.SearchTerm as string;
}

<main>

    <!-- page-title-area start -->
    <div class="page-title-area">
        <div class="breadcrumb-wrapper" data-background="/assets/img/page-title/numbers-1800x540.jpg">
            <img class="shape-1" src="~/assets/img/shape/shape-81.png" alt="shape">
            <img class="shape-2" src="~/assets/img/shape/shape-82.png" alt="shape">
            <div class="container">
                <div class="breadcrumb-content text-center">
                    <h2 class="breadcrumb-title">Upcoming Events</h2>
                    <ul class="breadcrumb-menu">
                        <li>
                            <a href="/home/">Home</a>
                        </li>
                        <li>
                            <a href="#">Events</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- page-title-area end -->

    <!-- event-section start -->
    <section class="event-section pt-140 pb-120 pt-lg-100 pb-lg-10">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-10">
                    <div class="title-one text-center mb-70">
                        <h5 class="sub-title wow fadeInUp">Our Events</h5>
                        <h2 class="title wow fadeInUp" data-wow-delay="0.1">
                            Building Brighter
                            <span class="position-relative">
                                Futures
                                <img class="title-img-2"
                                     src="~/assets/img/shape/shape-7.png" alt="shape">
                            </span>
                        </h2>
                        <p class="wow fadeInUp" data-wow-delay="0.2">
                            Join us in making a difference. Explore our upcoming events and be part of something meaningful.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row align-items-center">
                @if (Model.Any())
                {
                    var delay = 0.1;
                    @foreach (var ev in Model)
                    {
                        <div class="col-lg-12">
                            <div class="event-wrap-2 d-xl-flex align-items-center mb-40 wow fadeInUp"
                                 data-wow-delay="@delay">
                                <div class="event-thumb">
                                    @if (!string.IsNullOrEmpty(ev.FeaturedImageUrl))
                                    {
                                        <img src="@ev.FeaturedImageUrl" alt="@ev.Title">
                                    }
                                    else
                                    {
                                        <img src="~/assets/img/event/event1-630x450.jpg" alt="@ev.Title">
                                    }
                                </div>
                                <div class="event-content">
                                    <h3 class="event-title">
                                        <a href="/event/details/@ev.Slug">
                                            @ev.Title
                                        </a>
                                    </h3>
                                    <p class="description">
                                        @if (!string.IsNullOrEmpty(ev.Description) && ev.Description.Length > 200)
                                        {
                                            @Html.Raw(ev.Description.Substring(0, 200))...
                                        }
                                        else
                                        {
                                            @Html.Raw(ev.Description)
                                        }
                                    </p>
                                    <div class="event-meta">
                                        @if (ev.StartTime.HasValue && ev.EndTime.HasValue)
                                        {
                                            <a href="#"><i class="bi bi-clock"></i> @ev.StartTime.Value.ToString(@"hh\:mm") - @ev.EndTime.Value.ToString(@"hh\:mm")</a>
                                        }
                                        <a href="#">
                                            <i class="bi bi-geo-alt"></i> @ev.Location
                                        </a>
                                    </div>
                                    <a class="event-btn" href="/event/details/@ev.Slug">More Details</a>
                                    <div class="event-date">@ev.EventDate.Day <span>@ev.EventDate.ToString("MMM")</span></div>
                                </div>
                            </div>
                        </div>
                        delay += 0.1;
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="text-center py-5">
                            <h4>No upcoming events at this time</h4>
                            <p class="text-muted">Check back soon for new events!</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- event-section end -->

    <!-- newsletter-section start -->
    <div class="newsletter-section position-relative z-1">
        <img class="shape-1 position-absolute ml-100 mt-50 d-none d-lg-inline-block"
             src="~/assets/img/shape/shape-8.png" alt="shape">
        <div class="container">
            <div class="row align-items-center newsletter-border pt-50">
                <div class="col-lg-6">
                    <div class="title-one text-lg-start text-center">
                        <h2 class="title">Subscribe to Regular Newsletters.</h2>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="subscribe-form sub-form-2 text-lg-end mb-25">
                        <input type="text" placeholder="Enter Your Mail">
                        <button type="submit">Subscribe</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- newsletter-section end -->

</main>
