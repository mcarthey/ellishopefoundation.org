@* Updated "Index5.cshtml" foundation for Ellis Hope Foundation, based on the Core 9 template *@

@{
    ViewBag.Title = "Home - Ellis Hope Foundation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    @* Hero Section *@
    <section class="theme-banner-four">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <h1 class="main-title wow fadeInUp">An Opportunity for a Healthy Lifestyle</h1>
                        <p class="description wow fadeInUp" data-wow-delay="0.1s">
                            Dedicated to helping others achieve personal fitness, mental health, and a better tomorrow.
                        </p>
                        <div class="d-md-flex align-items-center wow fadeInUp" data-wow-delay="0.2s">
                            <div class="hero-btn-1 me-md-4 mb-md-0 mb-4">
                                <a href="/getstarted" class="ht-btn bstyle">Get Started</a>
                            </div>
                            <div class="hero-btn-2 d-none d-xl-inline-block">
                                <a href="/about" class="ht-btn bstyle-2">Learn More</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-img text-center">
                        <img class="img-fluid" src="~/assets/img/hero/hero-img-4.png" alt="hero">
                    </div>
                </div>
            </div>
        </div>
    </section>

    @* About Us Section *@
    <section class="about-section-four pt-90 pb-45">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="img-wrapper-three wow fadeInLeft">
                        <img class="main-img img-fluid" src="~/assets/img/media/media-21.png" alt="Ellis Hope Foundation">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="text-wrapper wow fadeInRight">
                        <h5 class="sub-title">Who We Are</h5>
                        <h2 class="title">Empowering individuals to live healthier, happier lives.</h2>
                        <p>
                            At Ellis Hope Foundation, we believe in providing access to resources and opportunities for all. Through fitness, education, and mental health support, we strive to build stronger communities.
                        </p>
                        <div class="bottom-btn">
                            <a href="/about" class="ht-btn style-6">About Us</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @* Our Programs Section *@
    <section class="we-do-section-three position-relative z-1 pt-200 pt-lg-60 pb-45 pb-lg-15">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-9 col-lg-8 text-center">
                    <h5 class="sub-title wow fadeInUp">Our Programs</h5>
                    <h2 class="title wow fadeInUp" data-wow-delay="0.1s">
                        Supporting fitness, mental health, and wellness.
                    </h2>
                </div>
            </div>
            <div class="row align-items-center gx-xxl-5">
                <div class="col-xl-4 col-md-6">
                    <div class="feature-wrap-6 wow fadeInUp">
                        <div class="icon">
                            <img src="~/assets/img/icon/icon-15.svg" alt="Fitness">
                        </div>
                        <h4 class="feature-title">Fitness Initiatives</h4>
                        <p class="description">Providing programs that encourage physical activity and healthy lifestyles for all.</p>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6">
                    <div class="feature-wrap-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="icon">
                            <img src="~/assets/img/icon/icon-16.svg" alt="Mental Health">
                        </div>
                        <h4 class="feature-title">Mental Health Support</h4>
                        <p class="description">Connecting individuals with resources and education to promote mental well-being.</p>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6">
                    <div class="feature-wrap-6 wow fadeInUp" data-wow-delay="0.2s">
                        <div class="icon">
                            <img src="~/assets/img/icon/icon-17.svg" alt="Community">
                        </div>
                        <h4 class="feature-title">Community Outreach</h4>
                        <p class="description">Partnering with local organizations to build strong, supportive communities.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @* Call to Action *@
    <section class="contact-section-two pt-140 pb-140" data-background="/assets/img/bg/bg-6.jpg">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h2 class="title text-white">Ready to make an impact?</h2>
                    <p class="text-white opacity-75 mb-70">
                        Join us in promoting healthier, happier lives. Your support changes lives.
                    </p>
                    <a href="/contact" class="ht-btn style-7">Get Involved</a>
                </div>
            </div>
        </div>
    </section>
</main>