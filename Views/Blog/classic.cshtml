@model IEnumerable<EllisHope.Models.Domain.BlogPost>
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var categories = ViewBag.Categories as IEnumerable<EllisHope.Models.Domain.BlogCategory> ?? Enumerable.Empty<EllisHope.Models.Domain.BlogCategory>();
    var searchTerm = ViewBag.SearchTerm as string;
    var selectedCategory = ViewBag.SelectedCategory as int?;
}

<main>

<!-- page-title-area start -->
<div class="page-title-area">
    <div class="breadcrumb-wrapper" data-background="/assets/img/page-title/page-title-bg.jpg">
        <img class="shape-1" src="~/assets/img/shape/shape-81.png" alt="shape">
        <img class="shape-2" src="~/assets/img/shape/shape-82.png" alt="shape">
        <div class="container">
            <div class="breadcrumb-content text-center">
                <h2 class="breadcrumb-title">Blog</h2>
                <ul class="breadcrumb-menu">
                    <li>
                        <a href="/home/">Home</a>
                    </li>
                    <li>
                        <a href="#">Blog</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- page-title-area end -->

<!--blog-classic-section start-->
<div class="blog-classic-section pt-140 pt-lg-100 pb-125 pb-lg-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 pe-xxl-3">
                @if (Model.Any())
                {
                    @foreach (var post in Model)
                    {
                        <div class="classic-style wow fadeInUp mb-50" data-wow-delay="0.1s">
                            @if (!string.IsNullOrEmpty(post.FeaturedImageUrl))
                            {
                                <div class="blog-thumb">
                                    @if (post.PublishedDate.HasValue)
                                    {
                                        <a href="/blog/details/@post.Slug" class="blog-date">@post.PublishedDate.Value.ToString("dd MMM")</a>
                                    }
                                    <img src="@post.FeaturedImageUrl" alt="@post.Title">
                                </div>
                            }
                            <div class="blog-content">
                                <div class="blog-meta">
                                    <a href="/blog/details/@post.Slug">@post.AuthorName</a>
                                    <span class="divider"></span>
                                    @if (post.PublishedDate.HasValue)
                                    {
                                        <span>@post.PublishedDate.Value.ToString("MMMM dd, yyyy")</span>
                                    }
                                </div>
                                <h3 class="blog-title">
                                    <a href="/blog/details/@post.Slug">
                                        @post.Title
                                    </a>
                                </h3>
                                @if (!string.IsNullOrEmpty(post.Excerpt))
                                {
                                    <p>@post.Excerpt</p>
                                }
                                <div class="mt-3">
                                    @if (post.BlogPostCategories.Any())
                                    {
                                        @foreach (var category in post.BlogPostCategories)
                                        {
                                            <a href="/blog/classic?category=@category.Category.Id" class="blog-tag me-2">@category.Category.Name</a>
                                        }
                                    }
                                </div>
                                <a href="/blog/details/@post.Slug" class="blog-btn mt-3">
                                    <img src="~/assets/img/icon/arrow-9.svg" alt="arrow">
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <h4>No blog posts found</h4>
                        <p class="text-muted">Check back soon for new content!</p>
                    </div>
                }
            </div>

            <div class="col-lg-4 ps-xxl-5">
                <div class="blog-sidebar mb-40">
                    <!-- Search Widget -->
                    <div class="widget widget-search mb-50 wow fadeInUp" data-wow-delay="0.1s">
                        <h3 class="widget-title">Search</h3>
                        <form class="search-form" asp-action="classic" method="get">
                            <input type="text" name="search" value="@searchTerm" placeholder="Search">
                            <button class="widget-btn" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>
                    </div>

                    <!-- Categories Widget -->
                    <div class="widget category-widget-content wow fadeInUp" data-wow-delay="0.2s">
                        <h3 class="widget-title">Categories</h3>
                        <ul class="list-unstyled category-widget mb-0">
                            @if (categories.Any())
                            {
                                @foreach (var category in categories)
                                {
                                    var count = category.BlogPostCategories.Count;
                                    <li>
                                        <a href="/blog/classic?category=@category.Id" class="@(selectedCategory == category.Id ? "active" : "")">
                                            @category.Name <span class="float-end">(@count)</span>
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li>No categories available</li>
                            }
                        </ul>
                    </div>

                    <!-- Recent Posts Widget -->
                    <div class="widget widget-post mt-50 wow fadeInUp" data-wow-delay="0.3s">
                        <h3 class="widget-title">Recent Posts</h3>
                        @{
                            var recentPosts = Model.Take(3);
                        }
                        @foreach (var recentPost in recentPosts)
                        {
                            <article class="recent-post mb-20">
                                @if (!string.IsNullOrEmpty(recentPost.FeaturedImageUrl))
                                {
                                    <a href="/blog/details/@recentPost.Slug">
                                        <figure class="post-thumb" style="background-image: url('@recentPost.FeaturedImageUrl')">
                                        </figure>
                                    </a>
                                }
                                <div class="post-content mb-2">
                                    <h5 class="post-title">
                                        <a href="/blog/details/@recentPost.Slug">
                                            @recentPost.Title
                                        </a>
                                    </h5>
                                    @if (recentPost.PublishedDate.HasValue)
                                    {
                                        <span class="date">
                                            <i class="bi bi-clock"></i> @recentPost.PublishedDate.Value.ToString("MMM dd, yyyy")
                                        </span>
                                    }
                                </div>
                            </article>
                        }
                    </div>

                    <!-- Tags Widget -->
                    @{
                        var allTags = Model
                            .Where(p => !string.IsNullOrEmpty(p.Tags))
                            .SelectMany(p => p.Tags!.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries))
                            .Distinct()
                            .Take(10);
                    }
                    @if (allTags.Any())
                    {
                        <div class="widget widget-categories-tag mt-50 wow fadeInUp" data-wow-delay="0.4s">
                            <h3 class="widget-title">Tags</h3>
                            <div class="tagcloud">
                                @foreach (var tag in allTags)
                                {
                                    <a href="/blog/classic?search=@tag">@tag</a>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!--blog-classic-section end-->

<!-- newsletter-section start -->
<div class="newsletter-section position-relative z-1">
    <img class="shape-1 position-absolute ml-100 mt-50 d-none d-lg-inline-block"
         src="~/assets/img/shape/shape-8.png" alt="shape">
    <div class="container">
        <div class="row align-items-center newsletter-border pt-50">
            <div class="col-lg-6">
                <div class="title-one text-lg-start text-center">
                    <h2 class="title">Subscribe to Regular Newsletters.</h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="subscribe-form sub-form-2 text-lg-end mb-25">
                    <input type="text" placeholder="Enter Your Mail">
                    <button type="submit">Subscribe</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- newsletter-section end -->

</main>
